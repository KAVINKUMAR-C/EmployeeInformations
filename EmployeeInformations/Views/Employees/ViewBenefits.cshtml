@using EmployeeInformations.Model.BenefitViewModel;
@model ViewTotalEmployeeBenefits
@{
    ViewBag.Title = "ViewBenefits";
    Layout = "_Layout";
    
}
 
<div class="card-title mb-4">
    <h6 class="title text-primary">Benefit Informations</h6>
    
</div>

<div class="d-flex mb-1">
    @Html.ActionLink("Back", "EmployeesInfo", "Employees", null, new { @class = "btn btn-secondary ml-auto mr-0" })
</div>

<div class="tab-pane px-3">
    <div class="card my-4 boxshadow-none table-scroll">
        <table class="table">
            <thead>
                <tr class="nk-tb-item table-header">
                    <th>Employee Name</th>
                    <th>Benefit Name</th>
                   @* <th>CompanyId</th>*@
                </tr>

            </thead>
            <tbody>

                @if (Model.ViewEmployeeBenefits.Count() > 0)
                {
                    foreach (var item in Model.ViewEmployeeBenefits)
                    {
                        <tr>
                            <td>
                                @item.EmployeeName
                            </td>
                            <td>
                                @item.BenefitName
                            </td>
                           @* <td>
                                @item.CompanyName
                            </td>*@

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td class="text-danger" style="text-align:center;" colspan="3">No record found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="card-title mb-4">
    <h6 class="title text-primary">Medical Benefit Informations</h6>
</div>

<div class="tab-pane px-3">
    <div class="card my-4 boxshadow-none table-scroll">
        <table class="table">
            <thead>
                <tr class="nk-tb-item table-header">
                    <th>Employee Name</th>
                    <th>Benefit Name</th>
                    <th>Company</th>
                    <th>Scheme</th>
                    <th>Category</th>
                    <th>Cost</th>
                    <th>Member</th>
                    <th>Membership Number</th>

                </tr>
            </thead>
            <tbody>
                @if (Model.ViewEmployeeMedicalBenefits.Count() > 0)                
                {
                    foreach (var item in Model.ViewEmployeeMedicalBenefits)
                    {
                        <tr>
                            <td>
                                @item.EmployeeName
                            </td>
                            <td>
                                @item.BenefitName
                            </td>
                            <td>
                                @item.CompanyName
                            </td>
                            <td>
                                @item.Scheme
                            </td>
                            <td>
                                @item.Category
                            </td>
                            <td>
                                @item.Cost
                            </td>
                            <td>
                                @item.Member
                            </td>
                            <td>
                                @item.MembershipNumber
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td class="text-danger" style="text-align:center;" colspan="8">No record found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>

    $('.viewActive li').removeClass('active');
    $(".empBenefitDetails").addClass('active');
  
</script>



