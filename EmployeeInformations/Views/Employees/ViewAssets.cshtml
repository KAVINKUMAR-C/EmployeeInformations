@using EmployeeInformations.Model.AssetViewModel
@using Microsoft.AspNetCore.Http;
@model List<ViewAssets>
@{
    ViewBag.Title = "ViewAssets";
    Layout = "_Layout";
}


<form>

    <div class="card-title mb-4">
        <h6 class="title text-primary">Asset Details</h6>
    </div>

    <div class="d-flex mb-1">
        @Html.ActionLink("Back", "EmployeesInfo", "Employees", null, new { @class = "btn btn-secondary ml-auto mr-0" })
    </div>

    <div class="card card-bordered card-preview">
        <div class="card-inner table-card">

            <table class="display employee-holiday-table mb-3 no-sorting-table" style="width:100%" data-auto-responsive="false" id="getAssetData">
                <thead>
                    <tr class="nk-tb-item table-header">
                        <th>Employee Name</th>
                        <th>Asset Type</th>
                        <th>Category</th>
                        <th>Asset Name</th>
                        <th>Asset Code</th>                       
                        <th>Location</th>
                        <th>Product Number</th>
                        <th>Model Number</th>
                        @*<th>Purchase Date</th>
                        <th>Warranty Start Date</th>
                        <th>Warranty End Date</th>
                        <th>Return Date</th>
                        <th>Issue Date</th>
                        <th>AssetStatus</th>                                               
                        <th>Remark</th>
                        <th>Description</th> 
                        <th>Purchase Order/IN:No</th>*@
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr class="nk-tb-item">
                                <td>
                                    @item.EmployeeName
                                </td>

                                <td>
                                    @item.AssetTypeName
                                </td>
                                <td>
                                    @item.CategoryName
                                </td>
                                <td>
                                    @item.AssetName
                                </td>

                                <td>
                                    @item.AssetCode
                                </td>
                                <td>
                                    @item.LocationName
                                </td>
                                <td>
                                    @item.ProductNumber
                                </td>
                                <td>
                                    @item.ModelNumber
                                </td>
                                
                                @*<td>
                        @item.PurchaseDate?.ToString(Constant.DateFormat)
                                </td>
                                <td>
                        @item.WarrantyStartDate?.ToString(Constant.DateFormat)
                                </td>
                                <td>
                        @item.WarrantyEndDate?.ToString(Constant.DateFormat)
                                </td>
                                <td>
                        @item.ReturnDate?.ToString(Constant.DateFormat)
                                </td>
                                <td>
                        @item.IssueDate?.ToString(Constant.DateFormat)
                                </td>
                                <td>
                                    @item.AssetStatusName
                                </td>                                                              
                                <td>
                                    @item.Remark
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    @item.PoInNo
                                </td>*@
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>

<script>

    $(document).ready(function () {
        $('#getAssetData').DataTable({
            "bInfo": true,
            "paging": true,           
        });
    });

    $('.viewActive li').removeClass('active');
    $(".empAssetDetails").addClass('active');

</script>
