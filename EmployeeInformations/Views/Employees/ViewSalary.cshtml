@using EmployeeInformations.Model.EmployeesViewModel;
@model SalaryViewModel

<div class="card-title mb-4">
    <h6 class="title">Salary Information</h6>
</div>

<div class="tab-pane px-3">
    <div class="card my-4 boxshadow-none edit-page table-card" data-simplebar>
        <table class="table" id="getdata">
            <thead>
                <tr class="nk-tb-item table-header">
                    <th>Year</th>
                    <th>Month</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.salary.Count() > 0)
                {
                    foreach (var item in Model.salary)
                    {
                        <tr class="nk-tb-item">
                            <td class="nk-tb-col">
                                @item.Year
                            </td>
                            <td class="nk-tb-col">
                                @item.MonthName
                            </td>                           
                            <td class="nk-tb-col">
                                @item.Amount
                            </td>                                                       
                        </tr>
                    }
                }
                else
                {
                    <tr class="nk-tb-item">
                        <td class="text-danger" style="text-align:center;" colspan="5">No record found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>

    $('.viewActive li').removeClass('active');
    $(".empSalaryDetails").addClass('active');   
</script>
