 @using EmployeeInformations.Model.LeaveSummaryViewModel;
@using Microsoft.AspNetCore.Http;
@model EmployeeLeaveViewModel
@{
    ViewBag.Title = "CreateLeave";
    Layout = "_Layout";
    var empId = Context.Session.GetInt32("EmpId");
}
<div class="leave-dtl-block-ch">
    <div class="nk-block-head nk-block-head-sm">
        <div class="nk-block-between">
            <div class="nk-block-head-content">
                <h3 class="nk-block-title page-title">Apply Leave</h3>
            </div><!-- .nk-block-head-content -->
        </div><!-- .nk-block-between -->
    </div>

    <div>
        @Html.HiddenFor(m => m.CasualLeaveRemaining)
        @Html.HiddenFor(m => m.SickLeaveRemaining)
        @Html.HiddenFor(m => m.EarnedLeaveRemaining)
        @Html.HiddenFor(m => m.MaternityLeaveRemaining)
        @Html.HiddenFor(m => m.CompensatoryOffRemaining)
    </div>


    <div class="card card-bordered card-preview">
        <div class="card-inner table-card">
            <table class="display employee-holiday-table mb-3 no-sorting" style="width:100%" data-auto-responsive="false" id="LeaveCountData">
                <thead>
                    <tr class="nk-tb-item table-header">
                        <th class="nk-tb-col"><span class="sub-text">Leave Type</span></th>
                        <th class="nk-tb-col tb-col"><span class="sub-text">Total Leave</span></th>
                        <th class="nk-tb-col tb-col"><span class="sub-text">Applied Leave</span></th>
                        <th class="nk-tb-col tb-col"><span class="sub-text">Approved Leave</span></th>
                        <th class="nk-tb-col tb-col"><span class="sub-text">Remaining Leave</span></th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.LeaveCounts.Count() > 0)
                    {
                        @foreach (var item in Model.LeaveCounts)
                        {
                            <tr class="nk-tb-item">
                                <td class="nk-tb-col tb-col">
                                    <b class="tb-sub text-primary">@item.LeaveType</b>
                                </td>
                                <td class="nk-tb-col tb-col">
                                    <span>@item.TotalLeave </span>
                                </td>
                                <td class="nk-tb-col tb-col">
                                    <span>@item.AppliedLeave </span>
                                </td>
                                <td class="nk-tb-col tb-col">
                                    <span>@item.ApprovedLeave </span>
                                </td>
                                <td class="nk-tb-col tb-col">
                                    <span>@item.RemaingLeave </span>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card card-bordered card-preview">
        <div class="card-inner">
            <form>
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row">
                    <div class="col-lg-4 col-md-6">
                        <div class="form-group" id="appliedleavetype">
                            <label class="form-label">Leave Type<span class="required" style="color: #FF0000">*</span></label>
                            @Html.HiddenFor(m => m.EmpId)
                            <div>
                                @Html.DropDownListFor(m => m.AppliedLeaveTypeId, new SelectList(Model.LeaveType, "LeaveTypeId", "LeaveType"), "--Select Leave Type--", new { @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(m => m.AppliedLeaveTypeId, "", new { @class = "error text-danger", id = "errValid-LeaveTypes" })
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">

                        <div class="form-group">
                            <label class="form-label">From Date<span class="required" style="color: #FF0000">*</span></label>
                            <div id="leaveFromDatedatepicker" class="input-group date" data-date-format="dd/mm/yyyy">
                                <input type="text" class="form-control" id="leaveFromDate" placeholder="Enter From Date">
                                <span class="input-group-addon">
                                    <i class="icon ti-calendar"></i>
                                </span>
                            </div>
                            <span class="error text-danger" id="errValid-LeaveFromDate"></span>
                            <span id="errVerify-halfDayDate" style="display:none;" class="error text-danger"> <b>You are not eligible for take leave!</b> </span>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6" id="leaveToDatedatepickerblock">
                        <div class="form-group">
                            <label class="form-label" id="leaveToLabel">To Date<span class="required" style="color: #FF0000">*</span></label>
                            <div id="leaveToDatedatepicker" class="input-group date" data-date-format="dd/mm/yyyy">
                                <input type="text" class="form-control" id="leaveToDate" placeholder="Enter To Date">
                                <span class="input-group-addon">
                                    <i class="icon ti-calendar"></i>
                                </span>
                            </div>
                            <span class="error text-danger" id="errValid-LeaveToDate"></span>
                            <span id="errVerify-leaveToDate" style="display:none;" class="error text-danger"> Please select <b>To Date</b> Should Not be Less than <b>From Date</b> </span>
                            <span id="errVerify-leaveCountDate" style="display:none;" class="error text-danger"> <b>You are not eligible for take leave!</b> </span>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="row">
                            <div class="col" id="hidden_fromTime" style="display:none">
                                <div class="form-group">

                                    <label class="form-label">From Time<span class="required" style="color: #FF0000">*</span></label>
                                    <div class="input-group" id="drp_FromTime">
                                        <input type="text" id="fromTime" value="@Model.FromTime" class="form-control" />
                                        @*<span class="input-group-addon">
                                        <i class="icon ti-alarm-clock"></i>
                                        </span>*@
                                    </div>
                                    <span class="error text-danger" id="errValid-StartTime"></span>
                                </div>
                            </div>

                            <div class="col" id="hidden_toTime" style="display:none">
                                <div class="form-group">
                                    <label class="form-label">To Time<span class="required" style="color: #FF0000">*</span></label>
                                    <div class="input-group" id="drp_ToTime">
                                        <input type="text" id="toTime" value="@Model.ToTime" class="form-control" />
                                        @*<span class="input-group-addon">
                                        <i class="icon ti-alarm-clock"></i>
                                        </span>*@
                                    </div>
                                    <span class="error text-danger" id="errValid-EndTime"></span>
                                    <span id="errVerify-leaveToTime" style="display:none;" class="error text-danger"> Please select <b>To Time</b> Should Not be Less than <b>From Time</b> </span>
                                    <span id="errVerify-leaveTime" style="display:none;" class="error text-danger"> Only allowed <b>Two Hrs</b> </span>
                                </div>
                            </div>

                        </div>

                    </div>


                    <div class="col-12 my-3" id="checkBox">
                        <div class="form-group">
                            <div class="custom-control custom-control-sm custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="SameAs" name="chkIsEnabledModule" value="0">
                                <label class="custom-control-label" for="SameAs"><b>Is Half Day</b></label>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12" id="documentBlock">
                        <div class="form-group">
                            <label class="form-label" id="documentLable">Document</label>

                            <div class="input-group custom-file-button">
                                @*<label class="input-group-text" for="inputGroupFile2">Upload</label>*@
                                @Html.TextBoxFor(m => m.LeaveFilePath, "", new { type = "file", @class = "form-control", name = "file" })
                            </div>
                            @Html.ValidationMessageFor(m => m.LeaveFilePath, "", new { @class = "error text-danger", id = "errValid-File" })
                            <span class="error text-danger" id="errValid-ErrorFileSize"></span>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-label">Reason<span class="required" style="color: #FF0000">*</span></label>
                            @Html.TextArea("Reason", null, new { cols = "5", rows = "5", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Reason, "", new { @class = "error text-danger", id = "errValid-Reason" })
                        </div>
                    </div>

                </div>

                <div class="col-lg-12 d-flex mt-3 p-0">
                    <input type="button" class="btn btn-secondary ml-auto mr-3" id="btnLeaveBack" value="Back" />
                    <input type="button" class="btn btn-primary" id="btnCreateLeave" value="Save" />
                </div>

            </form>
        </div>
    </div>
</div>
<div class="modal" id="success_CreateLeave_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">
                Applied Successfully!
            </div>

            <!-- Modal footer -->
            <div class="modal-footer" id="btnCloseLeave">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        $('#LeaveCountData').DataTable({
            "bInfo": true,
            "paging": true,
        });
        $('#SameAs').click(function () {

            if ($(this).is(':checked')) {

                $(this).val("1");
            }
            else {
                $(this).val("0");
            }
        });


    });
    $("#SameAs").change(function () {

        var isEnable = $("#SameAs").val();
        if (isEnable == 1) {
            $("#leaveToDatedatepicker").hide();
            $("#leaveToDatedatepickerblock").hide();

        }
        else {
            $("#leaveToDatedatepicker").show();
            $("#leaveToDatedatepickerblock").show();
            $("#leaveToLabel").show();

        }
    });

    $("#LeaveFilePath").change(function () {

        var isEnable = $('#LeaveFilePath').prop("files").length;
        if (isEnable > 0) {
            $("#errValid-File").text("");
        }
        else {
            $("#errValid-File").text("Document field is required");
        }
    });

    $("#btnLeaveBack").click(function () {
        var urlToRedirect = '@Url.Action("EmployeesLeaveDetails", "LeaveSummary")';
        window.location.href = urlToRedirect;
    });

    $(document).ready(function () {

        $("#LeaveCountData_filter").hide();
        $("#LeaveCountData_length").hide();
        $("#LeaveCountData_paginate").hide();
        $("#LeaveCountData_next").hide();
        $("#LeaveCountData_info").hide();

        $("#fromTime").val('');
        $("#toTime").val('');
        $("#leaveFromDate").val('');
        $("#leaveToDate").val('');

        $("#leaveFromDatedatepicker").datepicker({
            autoclose: true,
            todayHighlight: true,
        });

        $("#leaveToDatedatepicker").datepicker({
            autoclose: true,
            todayHighlight: true,
        });

        $('#fromTime').timepicker({
            dynamic: false,
            dropdown: true,
            scrollbar: true,
            change: function (time) {
                $("#errValid-StartTime").text("");
                if ($(this).val() == "") {
                    $("#errValid-StartTime").text("From Time field is required");
                }
            }
        });
        $('#toTime').timepicker({
            dynamic: false,
            dropdown: true,
            scrollbar: true,
            change: function (time) {
                $("#errValid-EndTime").text("");
                if ($("#toTime").val() == "") {
                    $("#errValid-EndTime").text("To Time field is required");
                    $("#errVerify-leaveToTime").hide();
                }
            }
        });
        //-------------------------------------------------------------------------------------------------------------------------------------------------------
        // Nice Scroll Applied Leave Type
        $("#AppliedLeaveTypeId").select2().on("select2:open", function () {
            $('.select2-results__options').niceScroll({
                cursorcolor: "#4e5e7a",
                cursorwidth: "5px",
                autohidemode: false,
                cursorborder: "1px solid #4e5e7a",
                horizrailenabled: false,
            });
        });

        //Change Summary

        $("#leaveFromDate").change(function () {

            $("#errValid-LeaveFromDate").text("");
            if ($("#leaveFromDate").val() == "") {
                $("#errValid-LeaveFromDate").text("From Date field is required");
            }
            else {
                $("#errValid-LeaveFromDate").text("");
            }
        });

        $("#leaveToDate").change(function () {

            $("#errValid-LeaveToDate").text("");
            if ($("#leaveToDate").val() == "") {
                $("#errValid-LeaveToDate").text("To Date field is required");
                $("#errVerify-leaveToDate").hide();
                $("#errVerify-leaveCountDate").hide();
            }
            else {
                $("#errValid-LeaveToDate").text("");
            }
        });
    });

    $("#AppliedLeaveTypeId").change(function () {
        $("#errValid-LeaveTypes").text("");
        if ($("#AppliedLeaveTypeId :selected").val() == "") {
            $("#errValid-LeaveTypes").text("Leave Type field is required");
        }
    });

    $("#Reason").keyup(function () {
        $("#errValid-Reason").text("");
        if ($("#Reason").val() == "") {
            $("#errValid-Reason").text("Reason field is required");
        }
    });
    //-------------------------------------------------------------------------------------------------------------------------------------------------------

    //Create Leave

    $('#btnCreateLeave').click(function () {

        var formData = new FormData();
       
        var isValid = true;
        $("#errValid-LeaveTypes").text("");
        $("#errValid-LeaveFromDate").text("");
        $("#errValid-LeaveToDate").text("");
        $("#errValid-Reason").text("");
        $("#errVerify-leaveToDate").hide();
        $("#errVerify-leaveToTime").hide();
        $("#errValid-Enddate").text("");
        $("#errValid-StartTime").text("");
        $("#errVerify-leaveCountDate").hide();
        $("#errValid-ErrorFileSize").text('');
        $("#errValid-File").text("");
        var isHalfday = $('input[type=checkbox][name=chkIsEnabledModule]').val() == "1" ? true : false;

        if ($("#AppliedLeaveTypeId").val() == 5) {
            $("#errVerify-leaveCountDate").hide();
            $("#errValid-LeaveFromDate").text("");
            $("#errValid-LeaveToDate").text("");
            if ($("#AppliedLeaveTypeId").val() == "") {
                $("#errValid-LeaveTypes").text("Leave Type field is required");
                isValid = false;
            }

            if ($("#leaveFromDate").val() == "") {
                $("#errValid-LeaveFromDate").text("From Date field is required");
                isValid = false;
            }

            if ($("#Reason").val() == "") {
                $("#errValid-Reason").text("Reason field is required");
                isValid = false;
            }
            if ($("#fromTime").val() == "") {
                $("#errValid-StartTime").text("From Time field is required");
                isValid = false;
            }

            if ($("#toTime").val() == "") {
                $("#errValid-EndTime").text("To Time field is required");
                isValid = false;
            }

        }
        else if ($("#AppliedLeaveTypeId").val() == 2 && $("#leaveFromDate").val() < $("#leaveToDate").val()) {
            if ($("#AppliedLeaveTypeId").val() == "") {
                $("#errValid-LeaveTypes").text("Leave Type field is required");
                isValid = false;
            }

            if ($("#leaveFromDate").val() == "") {
                $("#errValid-LeaveFromDate").text("From Date field is required");
                isValid = false;
            }

            if ($("#leaveToDate").val() == "" && isHalfday == false) {
                $("#errValid-LeaveToDate").text("To Date field is required");
                isValid = false;
            }

            if ($("#Reason").val() == "") {
                $("#errValid-Reason").text("Reason field is required");
                isValid = false;
            }

            if ($('#LeaveFilePath').prop("files").length == 0) {
                $("#errValid-File").text("Document field is required");
                isValid = false;
            }

        }
        else {
            if ($("#AppliedLeaveTypeId").val() == "") {
                $("#errValid-LeaveTypes").text("Leave Type field is required");
                isValid = false;
            }

            if ($("#leaveFromDate").val() == "") {
                $("#errValid-LeaveFromDate").text("From Date field is required");
                isValid = false;
            }

            if ($("#leaveToDate").val() == "" && isHalfday == false) {
                $("#errValid-LeaveToDate").text("To Date field is required");
                isValid = false;
            }

            if ($("#Reason").val() == "") {
                $("#errValid-Reason").text("Reason field is required");
                isValid = false;
            }

        }

        var attachmentLength = $('#LeaveFilePath').prop("files").length;
        if (attachmentLength > 0) {
            var fileInput = $('#LeaveFilePath').prop("files")[0];
           
            if (!fileInput) {
                $("#errValid-ErrorFileSize").text('No file selected. Please upload a file.');
                return false;
            }

            if (fileInput.size > 2000000) {
                $("#errValid-ErrorFileSize").text('Allowed file size exceeded. (Max. 2 MB)!');
                return false;
            } else {
                formData.append("file", fileInput);
            }
        }
        var empId = $("#EmpId").val();
        var appliedLeaveTypeId = $("#AppliedLeaveTypeId").val();
        var leaveFromDate = $("#leaveFromDate").val();
        var leaveToDate = isHalfday ? leaveFromDate : $("#leaveToDate").val();
        var reason = $("#Reason").val();
        var fromTime = $("#fromTime").val();
        var toTime = $("#toTime").val();
        var start = $('#leaveFromDate').val();
        var end = isHalfday ? leaveFromDate : $("#leaveToDate").val();


        var casualLeaveRemaining = $("#CasualLeaveRemaining").val();
        var sickLeaveRemaining = $("#SickLeaveRemaining").val();
        var earnedLeaveRemaining = $("#EarnedLeaveRemaining").val();
        var maternityLeaveRemaining = $("#MaternityLeaveRemaining").val();
        var compensatoryOffRemaining = $("#CompensatoryOffRemaining").val();

        var dateSplit1 = start.split('/');
        var date1 = new Date(dateSplit1[2] + "," + dateSplit1[1] + "," + dateSplit1[0]);
        var dateSplit2 = end.split('/');
        var date2 = new Date(dateSplit2[2] + "," + dateSplit2[1] + "," + dateSplit2[0]);
        var diffTime = Math.abs(date2 - date1);
        var diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
        var leaveDate = (diffDays + 1)

        var leavedate = (isHalfday == true) ? 0.5 : leaveDate;
        formData.append("EmpId", empId);
        formData.append("AppliedLeaveTypeId", appliedLeaveTypeId);
        formData.append("leaveFromDate", leaveFromDate);
        formData.append("leaveToDate", leaveToDate);
        formData.append("Reason", reason);
        formData.append("PermissionFromTime", fromTime);
        formData.append("PermissionToTime", toTime);
        formData.append("StrLeaveFromDate", leaveFromDate);
        formData.append("StrLeaveToDate", leaveToDate);
        formData.append("IsHalfday", isHalfday);

        if (appliedLeaveTypeId == 5) {
            var time = $("#fromTime").val();
            var hours = Number(time.match(/^(\d+)/)[1]);
            var minutes = Number(time.match(/:(\d+)/)[1]);
            var AMPM = time.match(/\s(.*)$/)[1];
            if (AMPM == "PM" && hours < 12) hours = hours + 12;
            if (AMPM == "AM" && hours == 12) hours = hours - 12;
            var sHours = hours.toString();
            var sMinutes = minutes.toString();
            if (hours < 10) sHours = "0" + sHours;
            if (minutes < 10) sMinutes = "0" + sMinutes;
            var timeform = sHours + ":" + sMinutes;

            var time1 = $("#toTime").val();
            var hours1 = Number(time1.match(/^(\d+)/)[1]);
            var minutes1 = Number(time1.match(/:(\d+)/)[1]);
            var AMPM = time1.match(/\s(.*)$/)[1];
            if (AMPM == "PM" && hours1 < 12) hours1 = hours1 + 12;
            if (AMPM == "AM" && hours1 == 12) hours1 = hours1 - 12;
            var sHours1 = hours1.toString();
            var sMinutes1 = minutes1.toString();
            if (hours1 < 10) sHours1 = "0" + sHours1;
            if (minutes1 < 10) sMinutes1 = "0" + sMinutes1;
            var timeto = sHours1 + ":" + sMinutes1;
        }

        if (isValid) {
            //if (leaveToDate >= leaveFromDate) {
            if (appliedLeaveTypeId == 5) {
                var isTimeValid = getTimeValid(leaveFromDate, fromTime, toTime);
                var isTime = convertHourstoSeconds(timeform, timeto);

                if (isTimeValid) {
                    if (isTime) {
                        $('.loader').removeClass('d-none');
                        $.ajax({
                            type: "POST",
                            url: "/LeaveSummary/CreateLeave",
                            data: formData,
                            contentType: false,
                            processData: false,
                            success: (Result) => {

                                if (Result != null) {
                                    $("#success_CreateLeave_Popup").hide();
                                }

                                // $("#btnCloseLeave").css('display', 'none !important');
                                if (Result == true) {
                                    Swal.fire({
                                        title: 'Applied Successfully',
                                        text: "",
                                        icon: 'success',
                                        allowOutsideClick: false
                                    }).then((result) => {
                                        if (result.isConfirmed) {
                                            window.location.href = "/LeaveSummary/EmployeesLeaveDetails";
                                        };
                                    });
                                }
                                else {
                                    Swal.fire({
                                        title: 'Something error',
                                        text: "",
                                        icon: 'error',
                                        allowOutsideClick: false
                                    }).then((result) => {
                                        window.location.href = "/LeaveSummary/EmployeesLeaveDetails";
                                    });
                                }

                                $('.loader').addClass('d-none');
                            },

                            error: (Result) => {
                                $('.loader').addClass('d-none');
                            }
                        });
                    }
                    else {
                        $('.loader').addClass('d-none');
                        $("#errVerify-leaveTime").show();
                        return false;
                    }
                }
                else {
                    $('.loader').addClass('d-none');
                    $("#errVerify-leaveToTime").show();
                    return false;
                }

            }
            else {
                var isValidDate = dateDifference(leaveFromDate, leaveToDate);
                if (isValidDate) {
                    if (appliedLeaveTypeId == 6 || appliedLeaveTypeId == 1 && leavedate <= casualLeaveRemaining || appliedLeaveTypeId == 2 && leavedate <= sickLeaveRemaining || appliedLeaveTypeId == 3 && leavedate <= earnedLeaveRemaining || appliedLeaveTypeId == 4 && leavedate <= maternityLeaveRemaining || appliedLeaveTypeId == 7 || appliedLeaveTypeId == 8 && leavedate <= compensatoryOffRemaining) {
                   
                        $('.loader').removeClass('d-none');
                        $.ajax({
                            type: "POST",
                            url: "/LeaveSummary/VerifyCount",
                            data: formData,
                            contentType: false,
                            processData: false,
                            success: (Result) => {
                                if (Result == false) {
                                    $.ajax({
                                        type: "POST",
                                        url: "/LeaveSummary/CreateLeave",
                                        data: formData,
                                        contentType: false,
                                        processData: false,
                                        success: (Result) => {
                                            if (Result != null) {
                                                $("#success_CreateLeave_Popup").hide();
                                            }

                                            // $("#btnCloseLeave").css('display', 'none !important');
                                            if (Result == true) {
                                                Swal.fire({
                                                    title: 'Applied Successfully',
                                                    text: "",
                                                    icon: 'success',
                                                    allowOutsideClick: false
                                                }).then((result) => {
                                                    if (result.isConfirmed) {
                                                        window.location.href = "/LeaveSummary/EmployeesLeaveDetails";
                                                    };
                                                });
                                            }
                                            else {
                                                Swal.fire({
                                                    title: 'Something error',
                                                    text: "",
                                                    icon: 'error',
                                                    allowOutsideClick: false
                                                }).then((result) => {
                                                    window.location.href = "/LeaveSummary/EmployeesLeaveDetails";
                                                });
                                            }

                                            $('.loader').addClass('d-none');
                                        },
                                        error: (Result) => {
                                            $('.loader').addClass('d-none');
                                        }
                                    });
                                }
                                else {
                                    Swal.fire({
                                        title: 'Already ! Leave taken on the day',
                                        text: "",
                                        icon: 'warning',
                                        allowOutsideClick: false
                                    }).then((result) => {
                                        if (result.isConfirmed) {
                                            window.location.href = "/LeaveSummary/CreateLeave";
                                        };
                                    });

                                    $('.loader').addClass('d-none');
                                }
                            }

                        });


                    }
                    else {
                        $('.loader').addClass('d-none');

                        if (isHalfday) {
                            $("#errVerify-halfDayDate").show();
                        }
                        else {
                            $("#errVerify-leaveCountDate").show();
                        }
                        return false;
                    }
                }
                else {
                    $('.loader').addClass('d-none');
                    $("#errVerify-leaveToDate").show();
                    return false;
                }
            }
            //}
            //else {
            //    $("#errVerify-leaveToDate").show();
            //    return false;
            //}
        }
        else {
            return false;
        }
    });

    //Time Validation

    function getTimeValid(leaveFromDate, fromTime, toTime) {
        var result = false;
        var splitDate = leaveFromDate.split('/');
        var formatDate = splitDate[2] + "/" + splitDate[1] + "/" + splitDate[0];
        var fromDateTime = new Date(formatDate + ' ' + fromTime);
        var toDateTime = new Date(formatDate + ' ' + toTime);
        if (fromDateTime < toDateTime) {
            result = true;
        }
