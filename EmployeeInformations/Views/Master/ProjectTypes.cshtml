@using EmployeeInformations.Model.MasterViewModel;
@model ProjectTypeViewModule
@{
    ViewBag.Title = "ProjectTypes";
    Layout = "_Layout";
}



<div class="nk-block-head nk-block-head-sm">
    <div class="nk-block-between">
        <div class="nk-block-head-content">
            <h3 class="nk-block-title page-title">Project Type Details</h3>
        </div><!-- .nk-block-head-content -->
        <div class="d-flex mb-1">
            <input type="button" class="btn btn-primary ml-auto mt-auto mb-auto btn-sm" id="CreateProjectType" value="Create" />
        </div>
    </div><!-- .nk-block-between -->
</div>


<div class="card card-bordered card-preview">
    <div class="card-inner table-card">
        <table class="display employee-holiday-table mb-3 no-sorting" style="width:100%" data-auto-responsive="false" id="getProjectType">
            <thead>
                <tr class="nk-tb-item table-header">
                    <th class="nk-tb-col"><span class="sub-text">Name</span></th>
                    <th class="nk-tb-col tb-col"><span class="sub-text">Action</span></th>
                    @* <th class="nk-tb-col nk-tb-col-tools">
                    <div class="nk-tb-col py-0 border-0">
                    <ul class="nk-tb-actions gx-1 my-n1">
                    <li class="me-n1">
                    <div class="dropdown">
                    <a href="#" class="dropdown-toggle btn btn-icon btn-trigger" data-bs-toggle="dropdown"><em class="icon ni ni-more-h"></em></a>

                    </div>
                    </li>
                    </ul>
                    Action
                    </div>
                    </th>*@
                </tr>
            </thead>

            <tbody>
                @if (Model.ProjectTypeMaster.Count() > 0)
                {
                    @foreach (var item in Model.ProjectTypeMaster)
                    {
                        <tr class="nk-tb-item">
                            <td class="nk-tb-col tb-col">
                                <b class="tb-sub text-primary">@item.ProjectTypeName</b>
                            </td>
                            <td class="nk-tb-col tb-col">

                                <div class="nk-tb-col nk-tb-col-tools py-0 border-0">
                                    <ul class="nk-tb-actions gx-1 my-n1">
                                        <li class="me-n1">
                                            <div class="dropdown">
                                                <a href="#" class="dropdown-toggle btn btn-icon btn-trigger" data-bs-toggle="dropdown"><em class="icon ni ni-more-h"></em></a>
                                                <div class="dropdown-menu dropdown-menu-end">
                                                    <ul class="link-list-opt no-bdr">

                                                        <li><a href="javascript:void(0)" id="btnDelete" data-id="@item.ProjectTypeId"><em class="icon ni ni-delete"></em><span>Delete</span></a></li>

                                                    </ul>
                                                </div>

                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                        <!-- .nk-tb-item  -->
                    }
                }
            </tbody>
        </table>
    </div>
</div>


<div class="modal" id="Create_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Project Type</h5>
            </div>
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">

                <div class="col-12">
                    <div class="form-group">
                        <label class="form-label">Name<span class="required" style="color: #FF0000">*</span></label>
                        <input type="text" class="form-control" id="ProjectTypeName" />
                        @Html.ValidationMessageFor(m => m.ProjectTypeName, "", new { @class = "error text-danger", id = "errValid-ProjectTypeName" })
                        <span id="errVerify-ProjectTypeName" style="display:none;" class="error text-danger">Name already exists! </span>
                    </div>
                    <span class="error text-danger" id="errValid-ProjectTypeName"></span>
                </div>

                <div class="col-lg-12 d-flex mt-3 p-0">
                    <input type="button" class="btn btn-primary ml-auto mr-3" id="btnCreate" value="Save" />
                    <input type="button" class="btn btn-danger" id="btnCloseProjectTypes" value="Cancel" />
                </div>
            </div>

        </div>
    </div>
</div>


<div class="modal" id="success_DeleteProjectTypes_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content p-3 text-center">
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">
                <h4 class="nk-modal-title">Deleted Successfully!</h4>
            </div>

            <!-- Modal footer -->
            <div class="text-center" id="btnCloseDeleteProjectTypes">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>

    </div>
</div>


<script>
    $(document).ready(function () {
        $('#getProjectType').DataTable({
            "bInfo": true,
            "paging": true
        });
    });

    $(document).ready(function () {
        $("#CreateProjectType").click(function () {
            $("#Create_Popup").modal('show');
        });
    });

    $("#btnCloseProjectTypes").click(function () {
        $("#Create_Popup").hide();
        var urlToRedirect = '@Url.Action("ProjectTypes", "Master")';
        window.location.href = urlToRedirect;
    });

    $("#ProjectTypeName").keyup(function () {
        var isValid = true;
        $("#errValid-ProjectTypeName").text("");
        $("#errVerify-ProjectTypeName").hide();


        if ($("#ProjectTypeName").val() == "") {
            $("#errValid-ProjectTypeName").text("Name field is required");
            isValid = false;
        }
    });
    //-----------------------------------------------------------------------------------------------------------------------------------------

    // Create project type

    $("#btnCreate").click(function () {
        var isValid = true;
        var formData = new FormData;
        $("#errValid-ProjectTypeName").text("");
        $("#errVerify-ProjectTypeName").hide();

        if ($("#ProjectTypeName").val() == "") {
            $("#errValid-ProjectTypeName").text("Name field is required");
            isValid = false;
        }

        var projectTypeName = $("#ProjectTypeName").val();
        formData.append("ProjectTypeName", projectTypeName);

        if (isValid) {
            $.ajax({
                type: "POST",
                url: "/Master/AddProjectType",
                contentType: false,
                processData: false,
                data: formData,
                beforeSend: function () {
                    $('.loader').removeClass('d-none');
                },
                success: (result) => {
                    $("#Create_Popup").css('display', 'none !important');
                    $('.loader').addClass('d-none');
                    if (result.projectTypeNameCount == 1) {
                        $("#errVerify-ProjectTypeName").show();
                        return false;
                    }
                    else {
                        if (result.projectTypeId > 0) {
                            swal.fire({
                                    title: "Added Successfully",
                                    text: "",
                                    icon: "success",
                                    allowOutsideClick: false  // This prevents closing on outside click
                            }).then((resultValue) => {
                                    if (resultValue.isConfirmed) {
                                        window.location.href = "/Master/ProjectTypes";
                                    };
                            });

                        }
                        else {
                            swal.fire({
                                title: "Something error",
                                text: "",
                                icon: "error",
                                allowOutsideClick: false  // This prevents closing on outside click
                            }).then((resultValue) => {
                                    window.location.href = "/Master/ProjectTypes";
                            });

                        }
                    }

                },
                error: (result) => {
                    $('.loader').addClass('d-none');
                }
            });
            }
        else {
            $('.loader').addClass('d-none');
            $("#errValid-ProjectTypeName").show();
            return false;
        }
    });
    //---------------------------------------------------------------------------------------------------------------------------------------------

    // Delete project type

    $('#getProjectType').on('click', '#btnDelete', function () {
        Swal.fire({
            title: 'Are you sure want to delete?',
            // text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#1ee0ac',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes',
            cancelButtonText: 'No',
            allowOutsideClick: false
        }).then((result) => {

            if (result.isConfirmed) {
                var id = $(this).data("id")
                var projectTypes = {
                    ProjectTypeId: id
                };

                $('.loader').removeClass('d-none');

                $.ajax({
                    type: "POST",
                    url: "/Master/DeleteProjectTypeId",
                    data: projectTypes,
                    success: (result) => {
                        if (result == true) {
                            swal.fire({
                                title: "Deleted Successfully!",
                                text: "",
                                icon: "success",
                                allowOutsideClick: false  // This prevents closing on outside click
                            }).then((resultValue) => {
                                    window.location.href = "/Master/ProjectTypes";
                            });

                        }
                        else {
                            swal.fire({
                                title: "Something error",
                                text: "",
                                icon: "error",
                                allowOutsideClick: false  // This prevents closing on outside click
                            }).then((resultValue) => {
                                    window.location.href = "/Master/ProjectTypes";
                            });

                        }
                        $('.loader').addClass('d-none');
                    },
                    error: (result) => {
                        $('.loader').addClass('d-none');
                    }

                });
            }
        });

    });
    $(document).ready(function () {
        $('#Create_Popup').modal({
            backdrop: 'static',
            keyboard: false
        })
    });

</script>
