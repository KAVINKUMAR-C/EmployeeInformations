@using EmployeeInformations.Model.MasterViewModel;
@model RelievingReasonViewModel
@{
    ViewBag.Title = "RelievingReason";
    Layout = "_Layout";
}

<div class="nk-block-head nk-block-head-sm">
    <div class="nk-block-between">
        <div class="nk-block-head-content">
            <h3 class="nk-block-title page-title">Relieving Reason</h3>
        </div><!-- .nk-block-head-content -->
        <div class="d-flex mb-1">
            <input type="button" class="btn btn-primary ml-auto mt-auto mb-auto btn-sm" id="CreateRelievingReason" value="Create" />
        </div>
    </div><!-- .nk-block-between -->
</div>

<div class="card card-bordered card-preview">
    <div class="card-inner table-card">
        <table class="display employee-holiday-table mb-3 no-sorting" style="width:100%" data-auto-responsive="false" id="getRelievingReason">
            <thead>
                <tr class="nk-tb-item table-header">
                    <th class="nk-tb-col"><span class="sub-text">Name</span></th>
                    <th class="nk-tb-col"><span class="sub-text">Status</span></th>
                    <th class="nk-tb-col tb-col"><span class="sub-text">Action</span></th>                    
                </tr>
            </thead>

            <tbody>
                @if (Model.RelievingReason.Count() > 0)
                {
                    @foreach (var item in Model.RelievingReason)
                    {
                        <tr class="nk-tb-item">
                            <td class="nk-tb-col tb-col">
                                <b class="tb-sub text-primary">@item.RelievingReasonName</b>
                            </td>

                            @if (item.IsActive)
                            {
                                <td class="nk-tb-col tb-col">
                                    <b class="badge badge-dot bg-success">Active</b>
                                </td>
                            }
                            else
                            {
                                <td class="nk-tb-col tb-col">
                                    <b class="badge badge-dot bg-danger">In Active</b>
                                </td>
                            }

                            <td class="nk-tb-col tb-col">

                                <div class="nk-tb-col nk-tb-col-tools py-0 border-0">
                                    <ul class="nk-tb-actions gx-1 my-n1">
                                        <li class="me-n1">
                                            <div class="dropdown">
                                                <a href="#" class="dropdown-toggle btn btn-icon btn-trigger" data-bs-toggle="dropdown"><em class="icon ni ni-more-h"></em></a>
                                                <div class="dropdown-menu dropdown-menu-end">
                                                    <ul class="link-list-opt no-bdr">
                                                        <li><a href="javascript:void(0)" class="btnUpdate" data-id="@item.RelievingReasonId" data-relievingreasonname="@item.RelievingReasonName" data-isactive="@item.IsActive"><em class="icon ni ni-edit"></em><span>Status</span></a></li>
                                                        <li><a href="javascript:void(0)" class="btnEdit" data-id="@item.RelievingReasonId" data-relievingreasonname="@item.RelievingReasonName" data-isactive="@item.IsActive"><em class="icon ni ni-edit"></em><span>Edit</span></a></li>
                                                        <li><a href="javascript:void(0)" id="btnDelete" data-id="@item.RelievingReasonId"><em class="icon ni ni-delete"></em><span>Delete</span></a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </td>

                        </tr>
                        <!-- .nk-tb-item  -->
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal" id="Create_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Relieving Reason</h5>
            </div>
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">

                <div class="col-12">
                    <div class="form-group">
                        <label class="form-label">Name<span class="required" style="color: #FF0000">*</span></label>
                        <input type="text" class="form-control" id="RelievingReasonName" />
                        @Html.ValidationMessageFor(m => m.RelievingReasonName,"",new { @class = "error text-danger",id = "errValid-RelievingReasonName"})
                        <span id="errVerify-RelievingReasonName" style="display:none;" class="error text-danger">Name already exists! </span>
                    </div>
                    <span class="error text-danger" id="errValid-RelievingReasonName"></span>
                </div>

                <div class="col-lg-12 d-flex mt-3 p-0">
                    <input type="button" class="btn btn-primary ml-auto mr-3" id="btnCreate" value="Save" />
                    <input type="button" class="btn btn-danger" id="btnCloseRelievingReason" value="Cancel" />
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal" id="success_DeleteDepartment_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content p-3 text-center">
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">
                <h4 class="nk-modal-title">  Deleted Successfully!</h4>
            </div>

            <!-- Modal footer -->
            <div class="text-center" id="btnCloseDeleteDepartment">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>


<div class="modal" id="success_Department_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Status</h5>
            </div>
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">

                <div class="col-12 d-flex mb-2">
                    <label class="form-label my-auto">Relieving Reason</label>
                    <div class="form-group m-0">
                        <lable class="badge badge-sm bg-outline-primary ml-2" id="RelievingReason"> </lable>
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        <div class="custom-control custom-control-sm custom-checkbox">
                            <input type="checkbox" name="chkIsActive" class="custom-control-input chkIsActive" id="chkIsActive">
                            <label class="custom-control-label" for="chkIsActive">Status</label>
                        </div>                        
                    </div>
                </div>

                <div class="col-lg-12 d-flex mt-3 p-0">
                    <input type="button" class="btn btn-primary ml-auto mr-3" id="btnCreateRelievingReason" value="Save" />
                    <input type="button" class="btn btn-danger" id="btnReason" value="Cancel" />
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="success_AssetCategoryCode_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Relieving Reason </h5>
            </div>
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">
                <div>
                    <div class="col-12">
                        <div class="form-group">
                            <label class="form-label">Name<span class="required" style="color: #FF0000">*</span></label>
                            <input type="text" class="form-control" id="RelievingReasons" />
                             <span class="error text-danger" id="errMsg-RelievingReasonName"></span>
                        </div>                       
                    </div>
                </div>                

                <div class="col-lg-12 d-flex mt-3 p-0">
                    <input type="button" class="btn btn-primary ml-auto mr-3" id="btnCreateReasonName" value="Save" />
                    <input type="button" class="btn btn-danger" id="btnCancel" value="Cancel" />
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        $('#getRelievingReason').DataTable({
            "bInfo": true,
            "paging": true
        });
    });

    $(document).ready(function () {
        $("#CreateRelievingReason").click(function () {
            $("#Create_Popup").modal('show');
        });

        $("#RelievingReasons").keyup(function () {
            var isValid = true;
            $("#errMsg-RelievingReasonName").text("");
            if ($("#RelievingReasons").val() == "") {
                $("#errMsg-RelievingReasonName").text("Name field is required");
            }
        });


        $("#RelievingReasonName").keyup(function () {
            var isValid = true;
            $("#errValid-RelievingReasonName").text("");
            if ($("#RelievingReasonName").val() == "") {
                $("#errValid-RelievingReasonName").text("Name field is required");
            }
        });
    });

    // Click summary 

    $('#btnCloseRelievingReason').click(function () {
        var urlToRedirect = '@Url.Action("RelievingReason","Master")';
        window.location.href = urlToRedirect;
    });

    $('#btnReason').click(function () {
        var urlToRedirect = '@Url.Action("RelievingReason","Master")';
        window.location.href = urlToRedirect;
    });

    $('#btnCancel').click(function () {
        var urlToRedirect = '@Url.Action("RelievingReason","Master")';
        window.location.href = urlToRedirect;
    });
    //--------------------------------------------------------------------------------------------------------------------------------------------

    // Create Relieving reason 
   
    $("#btnCreate").click(function() {      
        var formData = new FormData();
        var isValid = true;
        $("#errValid-RelievingReasonName").text("");
        $("#errVerify-RelievingReasonName").hide();
        if ($("#RelievingReasonName").val() == "") {
            $("#errValid-RelievingReasonName").text("Name field is required");
            isValid = false;
        }

        var relievingReasonName = $("#RelievingReasonName").val();
        formData.append("RelievingReasonName", relievingReasonName);
       
        if (isValid) {
          
            var url = "/Master/AddRelievingReasons";
              $.ajax({
                            type: "POST",
                            url: url,
                            data: formData,
                            contentType: false,
                            processData: false,
                            beforeSend: function() {
                                $('.loader').removeClass('d-none');
                            },
                            success: function(result) {
                                $("#Create_Popup").css('display', 'none !important');
                                if (result.relievingReasonNameCount == 1) {
                                    $('.loader').addClass('d-none');
                                    $("#errVerify-RelievingReasonName").show();
                                    return false;
                                }
                                else {
                                  if (result.relievingReasonId > 0) {
                                      swal.fire({
                                        title: "Added Successfully",
                                        text: "",
                                        icon: "success",
                                        allowOutsideClick: false  // This prevents closing on outside click
                                    }).then((resultValue) => {
                                            window.location.href = "/Master/RelievingReason";
                                    });
                                    
                                  } else {
                                      swal.fire({
                                        title: "Something error",
                                        text: "",
                                        icon: "error",
                                        allowOutsideClick: false  // This prevents closing on outside click
                                    }).then((resultValue) => {
                                           window.location.href = "/Master/RelievingReason";  
                                    });
                                     
                                  }
                                }                               
                            },
                            complete: function() {
                                $('.loader').addClass('d-none');
                            }                   
              });                                         
        }
        else {
            $("#errValid-RelievingReasonName").show();
            return false;
        }
    });
    //---------------------------------------------------------------------------------------------------------------------------------------------

    // update relieving reason

    $('#getRelievingReason').on('click', '.btnUpdate', function () {        
        $("#success_Department_Popup").modal('show');
        var relievingReason = $(this).data("relievingreasonname");
        var isactive = $(this).data("isactive");
        $("#RelievingReason").text(relievingReason);

        isactive == 'True' ? $('.chkIsActive').prop('checked', true) : $('.chkIsActive').prop('checked', false);

        $("#roleAction").val(isactive);
        var id = $(this).data("id");

        $('#success_Department_Popup').on('click', '#btnCreateRelievingReason', function () {           
            var departmentAction = $('.chkIsActive').prop('checked');
            var RelievingReason = {
                RelievingReasonId: id,
                IsActive: departmentAction
            };
            $('.loader').removeClass('d-none');
            $.ajax({
                type: "POST",
                url: "/Master/UpdateRelievingReasonststus",
                data: RelievingReason,
                success: (Result) => {
                    $("#success_Department_Popup").css('display', 'none !important');
                    if (Result > 0) {
                        swal.fire({
                                        title: "Updated Successfully",
                                        text: "",
                                        icon: "success",
                                        allowOutsideClick: false  // This prevents closing on outside click
                                    }).then((resultValue) => {
                                          window.location.href = "/Master/RelievingReason";
                                    });
                        
                    } else {
                        swal.fire({
                                        title: "Something error",
                                        text: "",
                                        icon: "error",
                                        allowOutsideClick: false  // This prevents closing on outside click
                                    }).then((resultValue) => {
                                           window.location.href = "/Master/RelievingReason";
                                    });
                        
                    }
                    
                    $('.loader').addClass('d-none');
                },
                error: (Result) => {
                    $('.loader').addClass('d-none');
                }
            });
        });

    });
    //-------------------------------------------------------------------------------------------------------------------------------------------------

    // Delete relieving reason

    $('#getRelievingReason').on('click', '#btnDelete', function () {
        Swal.fire({
            title: 'Are you sure want to delete?',
            // text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#1ee0ac',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes',
            cancelButtonText: 'No',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {                
                var id = $(this).data("id")
                var relievingReason = {
                    RelievingReasonId: id
                };
                $('.loader').removeClass('d-none');
                $.ajax({
                    type: "POST",
                    url: "/Master/DeleteRelievingReason",
                    data: relievingReason,
                    success: (Result) => {
                        if (Result == true) {    
                            swal.fire({
                                        title: "Deleted Successfully!",
                                        text: "",
                                        icon: "success",
                                        allowOutsideClick: false  // This prevents closing on outside click
                                    }).then((resultValue) => {
                                           window.location.href = "/Master/RelievingReason"; 
                                    });
                                
                        }
                        else {
                            swal.fire({
                                        title: "Something error",
                                        text: "",
                                        icon: "error",
                                        allowOutsideClick: false  // This prevents closing on outside click
                                    }).then((resultValue) => {
                                           window.location.href = "/Master/RelievingReason";
                                    });
                            
                        }
                        $('.loader').addClass('d-none');
                    },
                    error: (Result) => {
                        $('.loader').addClass('d-none');
                    }

                });
            }
        });

    });
    //-------------------------------------------------------------------------------------------------------------------------------------------------------

    // Edit relieving reason

    $('#getRelievingReason').on('click', '.btnEdit', function () {      
        $("#success_AssetCategoryCode_Popup").modal('show');
        var relievingreason = $(this).data("relievingreasonname");
              
        $("#RelievingReasons").val(relievingreason);
        var isactive = $(this).data("isactive");
        var id = $(this).data("id");
        var CategoryName = $("#RelievingReasons").val();
       
        $('#success_AssetCategoryCode_Popup').on('click', '#btnCreateReasonName', function () { 
            var isValid = true;
            var categoryName = $("#RelievingReasons").val();
            var category = {
                RelievingReasonId: id,
                RelievingReasonName: categoryName,
                IsActive: isactive
            };
            if (categoryName == "")
            {
                $("#errMsg-RelievingReasonName").text("Name field is required");
                isValid = false;
            }
            $('.loader').removeClass('d-none');
            if (isValid)
            {
                $.ajax({
                    type: "POST",
                    url: "/Master/UpdateRelievingReason",
                    data: category,
                    success: (Result) => {
                        $("#success_AssetCategoryCode_Popup").css('display', 'none !important');
                        if (Result > 0) {
                            swal.fire({
                                        title: "Updated Successfully",
                                        text: "",
                                        icon: "success",
                                        allowOutsideClick: false  // This prevents closing on outside click
                                    }).then((resultValue) => {
                                           window.location.href = "/Master/RelievingReason";
                                    });
                            
                        } else {
                            swal.fire({
                                        title: "Something error",
                                        text: "",
                                        icon: "error",
                                        allowOutsideClick: false  // This prevents closing on outside click
                                    }).then((resultValue) => {
                                           window.location.href = "/Master/RelievingReason"; 
                                    });
                            
                        }
                        
                        $('.loader').addClass('d-none');
                    },
                    error: (Result) => {
                        $('.loader').addClass('d-none');
                    }
                });
            }
            else {
                $('.loader').addClass('d-none');
                return false;
            }           
        });
    });
    $(document).ready(function () {
        $('#Create_Popup').modal({
            backdrop: 'static',
            keyboard: false
        })
        $('#success_Department_Popup').modal({
            backdrop: 'static',
            keyboard: false
        })
        $('#success_AssetCategoryCode_Popup').modal({
            backdrop: 'static',
            keyboard: false
        })
    });
</script>