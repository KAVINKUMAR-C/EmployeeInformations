@using EmployeeInformations.Model.MasterViewModel;
@model DesignationViewModel
@{
    ViewBag.Title = "Designation";
    Layout = "_Layout";
}


<div class="nk-block-head nk-block-head-sm">
    <div class="nk-block-between">
        <div class="nk-block-head-content">
            <h3 class="nk-block-title page-title">Designation Details</h3>
        </div><!-- .nk-block-head-content -->
        <div class="d-flex mb-1">
            <input type="button" class="btn btn-primary ml-auto mt-auto mb-auto btn-sm" id="CreateDesignation" value="Create" />
        </div>
    </div><!-- .nk-block-between -->
</div>

<div class="card card-bordered card-preview">
    <div class="card-inner table-card">
        <table class="display employee-holiday-table mb-3 no-sorting" style="width:100%" data-auto-responsive="false" id="getDesignation">
            <thead>
                <tr class="nk-tb-item table-header">
                    <th class="nk-tb-col"><span class="sub-text"> Name</span></th>
                    <th class="nk-tb-col"><span class="sub-text">Status</span></th>
                    <th class="nk-tb-col tb-col"><span class="sub-text">Action</span></th>
                    @* <th class="nk-tb-col nk-tb-col-tools">
                    <div class="nk-tb-col py-0 border-0">
                    <ul class="nk-tb-actions gx-1 my-n1">
                    <li class="me-n1">
                    <div class="dropdown">
                    <a href="#" class="dropdown-toggle btn btn-icon btn-trigger" data-bs-toggle="dropdown"><em class="icon ni ni-more-h"></em></a>

                    </div>
                    </li>
                    </ul>
                    Action
                    </div>
                    </th>
                    *@
                </tr>
            </thead>

            <tbody>
                @if (Model.Designation.Count() > 0)
                {
                    @foreach (var item in Model.Designation)
                    {
                        <tr class="nk-tb-item">
                            <td class="nk-tb-col tb-col">
                                <b class="tb-sub text-primary">@item.DesignationName</b>
                            </td>
                            @if (item.IsActive)
                            {
                                <td class="nk-tb-col tb-col">
                                    <b class="badge badge-dot bg-success">Active</b>
                                </td>
                            }
                            else
                            {
                                <td class="nk-tb-col tb-col">
                                    <b class="badge badge-dot bg-danger">In Active</b>
                                </td>
                            }
                            <td class="nk-tb-col tb-col">

                                <div class="nk-tb-col nk-tb-col-tools py-0 border-0">
                                    <ul class="nk-tb-actions gx-1 my-n1">
                                        <li class="me-n1">
                                            <div class="dropdown">
                                                <a href="#" class="dropdown-toggle btn btn-icon btn-trigger" data-bs-toggle="dropdown"><em class="icon ni ni-more-h"></em></a>
                                                <div class="dropdown-menu dropdown-menu-end">
                                                    <ul class="link-list-opt no-bdr">
                                                        <li><a href="javascript:void(0)" class="btnUpdate" data-id="@item.DesignationId" data-designationname="@item.DesignationName" data-isactive="@item.IsActive"><em class="icon ni ni-edit"></em><span>Edit</span></a></li>
                                                        <li><a href="javascript:void(0)" id="btnDelete" data-id="@item.DesignationId"><em class="icon ni ni-delete"></em><span>Delete</span></a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </td>

                        </tr>
                        <!-- .nk-tb-item  -->
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal" id="Create_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Designation</h5>
            </div>
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">
                <div>
                    <div class="col-12">
                        <div class="form-group">
                            <label class="form-label">Name<span class="required" style="color: #FF0000">*</span></label>
                            <input type="text" class="form-control" id="DesignationName" />
                            @Html.ValidationMessageFor(m => m.DesignationName,"",new{@class="error text-danger",id="errValid-DesignationName"})
                            <span id="errVerify-DesignationName" style="display:none;" class="error text-danger">Name already exists! </span>
                        </div>
                        <span class="error text-danger" id="errValid-DesignationName"></span>
                    </div>
                </div>
                <div class="col-lg-12 d-flex mt-3 p-0">
                    <input type="button" class="btn btn-primary ml-auto mr-3" id="btnCreate" value="Save" />
                    <input type="button" class="btn btn-danger" id="btnCloseDesignation" value="Cancel" />
                </div>
            </div>
        </div>
    </div>
</div>



<div class="modal" id="success_Designation_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Status</h5>
            </div>
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">
                <div>
                    <div class="col-12 d-flex mb-2">
                        <label class="form-label my-auto">Designation</label>
                        <div class="form-group m-0">
                            <lable class="badge badge-sm bg-outline-primary ml-2" id="Designation"> </lable>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <div class="custom-control custom-control-sm custom-checkbox">
                            <input type="checkbox" name="chkIsActive" class="custom-control-input chkIsActive" id="chkIsActive">
                            <label class="custom-control-label" for="chkIsActive">Status</label>
                        </div>
                        @*  <label>Status</label>
                        <input type="checkbox" class="chkIsActive" name="chkIsActive" />*@
                    </div>
                </div>

                <div class="col-lg-12 d-flex mt-3 p-0">
                    <input type="button" class="btn btn-primary ml-auto mr-3" id="btnCreateDesignation" value="Save" />
                    <input type="button" class="btn btn-danger" id="btnClose" value="Cancel" />
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="success_DeleteDesignation_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content p-3 text-center">
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">
                <h4 class="nk-modal-title"> Deleted Successfully!</h4>
            </div>

            <!-- Modal footer -->
            <div class="text-center" id="btnCloseDeleteDesignation">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>

    </div>
</div>



<script type="text/javascript">
    $(document).ready(function () {
        $('#getDesignation').DataTable({
            "bInfo": true,
            "paging": true
        });
    });

    $(document).ready(function () {
        $("#CreateDesignation").click(function () {
            $("#Create_Popup").modal('show');
        });
    });

    $("#btnCloseDesignation").click(function () {
        $("#Create_Popup").hide();
        var urlToRedirect = '@Url.Action("Designation","Master")';
        window.location.href = urlToRedirect;
    });

    $("#DesignationName").keyup(function () {
        var isValid = true;
        $("#errValid-DesignationName").text("");
        $("#errVerify-DesignationName").hide();

        if ($("#DesignationName").val() == "") {
            $("#errValid-DesignationName").text("Name field is required");
            isValid = false;
        }
    });
    //----------------------------------------------------------------------------------------------------------------------------------------------

    // Create designation

    $("#btnCreate").click(function () {

        var formData = new FormData();
        var isValid = true;
        $("#errValid-DesignationName").text("");
        $("#errVerify-DesignationName").hide();

        if ($("#DesignationName").val() == "") {
            $("#errValid-DesignationName").text("Name field is required");
            isValid = false;
        }

        var designationName = $("#DesignationName").val();
        formData.append("DesignationName", designationName);
       
        if (isValid) {
    
           var url = "/Master/AddDesignation";
            $.ajax({
                type: "POST",
                url: url,
                data: formData,
                contentType: false,
                processData: false,
                beforeSend: function () {
                    $('.loader').removeClass('d-none');
                },
                success: function (Result) {
                    $("#Create_Popup").css('display', 'none !important');
                    if (Result.designationNameCount == 1) {
                        $('.loader').addClass('d-none');
                        $("#errVerify-DesignationName").show();
                        return false;
                    }
                    else {
                        if (Result.designationId > 0) {
                            swal.fire({
                                        title: "Added Successfully",
                                        text: "",
                                        icon: "success",
                                        allowOutsideClick: false  // This prevents closing on outside click
                                    }).then((resultValue) => {
                                         window.location.href = "/Master/Designation";
                                    });
                           
                        }
                        else {
                            swal.fire({
                                        title: "Something error",
                                        text: "",
                                        icon: "error",
                                        allowOutsideClick: false  // This prevents closing on outside click
                                    }).then((resultValue) => {
                                           window.location.href = "/Master/Designation";
                                    });
                           
                        }
                    }

                },
                complete: function () {
                    $('.loader').addClass('d-none');
                }
          });           
        }
         else {
            $("#errValid-DesignationName").show();
            return false;
        }
    });
    //-------------------------------------------------------------------------------------------------------------------------------------------------------

    // Delete designation

    $('#getDesignation').on('click', '#btnDelete', function () {
        Swal.fire({
            title: 'Are you sure want to delete?',
            // text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#1ee0ac',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes',
            cancelButtonText: 'No',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                var id = $(this).data("id")
                var designation = {
                    DesignationId: id
                };

                $('.loader').removeClass('d-none');

                $.ajax({
                    type: "POST",
                    url: "/Master/DeletedDesignation",
                    data: designation,
                    success: (result) => {
                        if (result == true) {
                            swal.fire({
                                        title: "Deleted Successfully!",
                                        text: "",
                                        icon: "success",
                                        allowOutsideClick: false  // This prevents closing on outside click
                                    }).then((resultValue) => {
                                             window.location.href = "/Master/Designation";
                                    });
                            
                        }
                        else {
                            swal.fire({
                                        title: "Something error",
                                        text: "",
                                        icon: "error",
                                        allowOutsideClick: false  // This prevents closing on outside click
                                    }).then((resultValue) => {
                                           window.location.href = "/Master/Designation";
                                    });
                           
                        }
                        $('.loader').addClass('d-none');
                    },
                    error: (result) => {
                        $('.loader').addClass('d-none');
                    }

                });
            }
        });

    });
    //--------------------------------------------------------------------------------------------------------------------------------------

    // update Designation

    $('#getDesignation').on('click', '.btnUpdate', function () {

        $("#success_Designation_Popup").modal('show');
        var designationName = $(this).data("designationname");
        var isactive = $(this).data("isactive");
        $("#Designation").text(designationName);

        isactive == 'True' ? $('.chkIsActive').prop('checked', true) : $('.chkIsActive').prop('checked', false);

        $("#designationAction").val(isactive);
        var id = $(this).data("id");

        $('#success_Designation_Popup').on('click', '#btnCreateDesignation', function () {

            var designationAction = $('.chkIsActive').prop('checked');
            var designation = {
                DesignationId: id,
                IsActive: designationAction
            };
            $('.loader').removeClass('d-none');
            $.ajax({
                type: "POST",
                url: "/Master/UpdateDesignation",
                data: designation,
                success: (Result) => {
                    $("#success_Designation_Popup").css('display', 'none !important');
                    if (Result > 0) {
                        swal.fire({
                                        title: "Updated Successfully",
                                        text: "",
                                        icon: "success",
                                        allowOutsideClick: false  // This prevents closing on outside click
                                    }).then((resultValue) => {
                                           window.location.href = "/Master/Designation";
                                    });
                       
                    }
                    else {
                        swal.fire({
                                        title: "Something error",
                                        text: "",
                                        icon: "error",
                                        allowOutsideClick: false  // This prevents closing on outside click
                                    }).then((resultValue) => {
                                           window.location.href = "/Master/Designation";
                                    });
                        
                    }
                    $('.loader').addClass('d-none');
                },
                error: (Result) => {
                    $('.loader').addClass('d-none');
                }
            });
        });

    });

    $("#btnClose").click(function () {
        $("#success_Designation_Popup").hide();
        var urlToRedirect = '@Url.Action("Designation","Master")';
        window.location.href = urlToRedirect;
    });
    $(document).ready(function () {
        $('#Create_Popup').modal({
            backdrop: 'static',
            keyboard: false
        })
        $('#success_Designation_Popup').modal({
            backdrop: 'static',
            keyboard: false
        })
    });
</script>