@using EmployeeInformations.Model.MasterViewModel;
@model DepartmentViewModel
@{
    ViewBag.Title = "Department";
    Layout = "_Layout";
}


<div class="nk-block-head nk-block-head-sm">
    <div class="nk-block-between">
        <div class="nk-block-head-content">
            <h3 class="nk-block-title page-title">Department Details</h3>
        </div><!-- .nk-block-head-content -->
        <div class="d-flex mb-1">
            <input type="button" class="btn btn-primary ml-auto mt-auto mb-auto btn-sm" id="CreateDepartment" value="Create" />
        </div>
    </div><!-- .nk-block-between -->
</div>

<div class="card card-bordered card-preview">
    <div class="card-inner table-card">
        <table class="display employee-holiday-table mb-3 no-sorting" style="width:100%" data-auto-responsive="false" id="getDepartment">
            <thead>
                <tr class="nk-tb-item table-header">
                    <th class="nk-tb-col"><span class="sub-text">Name</span></th>
                    <th class="nk-tb-col"><span class="sub-text">Status</span></th>
                    <th class="nk-tb-col tb-col"><span class="sub-text">Action</span></th>
                    @* <th class="nk-tb-col nk-tb-col-tools">
                    <div class="nk-tb-col py-0 border-0">
                    <ul class="nk-tb-actions gx-1 my-n1">
                    <li class="me-n1">
                    <div class="dropdown">
                    <a href="#" class="dropdown-toggle btn btn-icon btn-trigger" data-bs-toggle="dropdown"><em class="icon ni ni-more-h"></em></a>

                    </div>
                    </li>
                    </ul>
                    Action
                    </div>
                    </th>*@
                </tr>
            </thead>

            <tbody>
                @if (Model.Department.Count() > 0)
                {
                    @foreach (var item in Model.Department)
                    {
                        <tr class="nk-tb-item">
                            <td class="nk-tb-col tb-col">
                                <b class="tb-sub text-primary">@item.DepartmentName</b>
                            </td>

                            @if (item.IsActive)
                            {
                                <td class="nk-tb-col tb-col">
                                    <b class="badge badge-dot bg-success">Active</b>
                                </td>
                            }
                            else
                            {
                                <td class="nk-tb-col tb-col">
                                    <b class="badge badge-dot bg-danger">In Active</b>
                                </td>
                            }

                            <td class="nk-tb-col tb-col">

                                <div class="nk-tb-col nk-tb-col-tools py-0 border-0">
                                    <ul class="nk-tb-actions gx-1 my-n1">
                                        <li class="me-n1">
                                            <div class="dropdown">
                                                <a href="#" class="dropdown-toggle btn btn-icon btn-trigger" data-bs-toggle="dropdown"><em class="icon ni ni-more-h"></em></a>
                                                <div class="dropdown-menu dropdown-menu-end">
                                                    <ul class="link-list-opt no-bdr">
                                                        <li><a href="javascript:void(0)" class="btnUpdate" data-id="@item.DepartmentId" data-departmentname="@item.DepartmentName" data-isactive="@item.IsActive"><em class="icon ni ni-edit"></em><span>Edit</span></a></li>
                                                        <li><a href="javascript:void(0)" id="btnDelete" data-id="@item.DepartmentId"><em class="icon ni ni-delete"></em><span>Delete</span></a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </td>

                        </tr>
                        <!-- .nk-tb-item  -->
                    }
                }
            </tbody>
        </table>
    </div>
</div>


<div class="modal" id="Create_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Department</h5>
            </div>
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">

                <div class="col-12">
                    <div class="form-group">
                        <label class="form-label">Name<span class="required" style="color: #FF0000">*</span></label>
                        <input type="text" class="form-control" id="DepartmentName" />
                        @Html.ValidationMessageFor(m => m.DepartmentName, "", new { @class = "error text-danger", id = "errValid-DepartmentName" })
                        <span id="errVerify-DepartmentName" style="display:none;" class="error text-danger">Name already exists! </span>
                    </div>
                    <span class="error text-danger" id="errValid-DepartmentName"></span>
                </div>

                <div class="col-lg-12 d-flex mt-3 p-0">
                    <input type="button" class="btn btn-primary ml-auto mr-3" id="btnCreate" value="Save" />
                    <input type="button" class="btn btn-danger" id="btnCloseDepartment" value="Cancel" />
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="success_DeleteDepartment_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content p-3 text-center">
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">
                <h4 class="nk-modal-title">  Deleted Successfully!</h4>
            </div>

            <!-- Modal footer -->
            <div class="text-center" id="btnCloseDeleteDepartment">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>


<div class="modal" id="success_Department_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Status</h5>
            </div>
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">

                <div class="col-12 d-flex mb-2">
                    <label class="form-label my-auto">Department </label>
                    <div class="form-group m-0">
                        <lable class="badge badge-sm bg-outline-primary ml-2" id="Department"> </lable>
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        <div class="custom-control custom-control-sm custom-checkbox">
                            <input type="checkbox" name="chkIsActive" class="custom-control-input chkIsActive" id="chkIsActive">
                            <label class="custom-control-label" for="chkIsActive">Status</label>
                        </div>
                        @*                        <label>Status</label>
                        <input type="checkbox" class="chkIsActive" name="chkIsActive" />*@
                    </div>
                </div>

                <div class="col-lg-12 d-flex mt-3 p-0">
                    <input type="button" class="btn btn-primary ml-auto mr-3" id="btnCreateDepartment" value="Save" />
                    <input type="button" class="btn btn-danger" id="btnDepartment" value="Cancel" />
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">

    $(document).ready(function () {
        $('#getDepartment').DataTable({
            "bInfo": true,
            "paging": true
        });
    });

    $(document).ready(function () {
        $("#CreateDepartment").click(function () {
            $("#Create_Popup").modal('show');
        });
    });

    $("#btnCloseDepartment").click(function () {
        $("#Create_Popup").hide();
        var urlToRedirect = '@Url.Action("Department", "Master")';
        window.location.href = urlToRedirect;
    });

    $("#DepartmentName").keyup(function () {
        var isValid = true;
        $("#errValid-DepartmentName").text("");
        $("#errVerify-DepartmentName").hide();

        if ($("#DepartmentName").val() == "") {
            $("#errValid-DepartmentName").text("Name field is required");
            isValid = false;
        }
    });
    //-----------------------------------------------------------------------------------------------------------------------------------------------

    // Create department

    $("#btnCreate").click(function () {
        var formData = new FormData();
        var isValid = true;
        $("#errValid-DepartmentName").text("");
        $("#errVerify-DepartmentName").hide();
        if ($("#DepartmentName").val() == "") {
            $("#errValid-DepartmentName").text("Name field is required");
            isValid = false;
        }

        var departmentName = $("#DepartmentName").val();
        formData.append("DepartmentName", departmentName);

        if (isValid) {
            var url = "/Master/AddDepartments";
            $.ajax({
                type: "POST",
                url: url,
                data: formData,
                contentType: false,
                processData: false,
                beforeSend: function () {
                    $('.loader').removeClass('d-none');
                },
                success: function (result) {
                    $("#Create_Popup").css('display', 'none !important');
                    if (result.departmentNameCount == 1) {
                        $('.loader').addClass('d-none');
                        $("#errVerify-DepartmentName").show();
                        return false;
                    }
                    else {
                        if (result.departmentId > 0) {
                            swal.fire({
                                title: "Added Successfully",
                                text: "",
                                icon: "success",
                                allowOutsideClick: false  // This prevents closing on outside click
                            }).then((resultValue) => {
                                    window.location.href = "/Master/Department";
                            });

                        }
                        else {
                            swal.fire({
                                title: "Something error",
                                text: "",
                                icon: "error",
                                allowOutsideClick: false  // This prevents closing on outside click
                            }).then((resultValue) => {
                                    window.location.href = "/Master/Department";
                            });
                        }
                    }

                },
                complete: function () {
                    $('.loader').addClass('d-none');
                }
            });
            }
        else {
            $("#errValid-DepartmentName").show();
            return false;
        }
    });
    //----------------------------------------------------------------------------------------------------------------------------------------------------

    // Delete Department

    $('#getDepartment').on('click', '#btnDelete', function () {
        Swal.fire({
            title: 'Are you sure want to delete?',
            // text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#1ee0ac',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes',
            cancelButtonText: 'No',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                var id = $(this).data("id")
                var department = {
                    DepartmentId: id
                };
                $('.loader').removeClass('d-none');

                $.ajax({
                    type: "POST",
                    url: "/Master/DeleteDepartment",
                    data: department,
                    success: (Result) => {
                        if (Result == true) {
                            swal.fire({
                                title: "Deleted Successfully!",
                                text: "",
                                icon: "success",
                                allowOutsideClick: false  // This prevents closing on outside click
                            }).then((resultValue) => {
                                    window.location.href = "/Master/Department";
                            });
                        }
                        else {
                            swal.fire({
                                title: "Something error",
                                text: "",
                                icon: "error",
                                allowOutsideClick: false  // This prevents closing on outside click
                            }).then((resultValue) => {
                                    window.location.href = "/Master/Department";
                            });
                        }
                        $('.loader').addClass('d-none');
                    },
                    error: (Result) => {
                        $('.loader').addClass('d-none');
                    }

                });
            }
        });

    });
    //-------------------------------------------------------------------------------------------------------------------------------------------------------

    $("#btnCloseDepartment").click(function () {
        $("#success_Department_Popup").hide();
        var urlToRedirect = '@Url.Action("Department", "Master")';
        window.location.href = urlToRedirect;
    });

    // update Department

    $('#getDepartment').on('click', '.btnUpdate', function () {

        $("#success_Department_Popup").modal('show');
        var department = $(this).data("departmentname");
        var isactive = $(this).data("isactive");
        $("#Department").text(department);

        isactive == 'True' ? $('.chkIsActive').prop('checked', true) : $('.chkIsActive').prop('checked', false);

        $("#roleAction").val(isactive);
        var id = $(this).data("id");

        $('#success_Department_Popup').on('click', '#btnCreateDepartment', function () {

            var departmentAction = $('.chkIsActive').prop('checked');
            var Department = {
                DepartmentId: id,
                IsActive: departmentAction
            };
            $('.loader').removeClass('d-none');
            $.ajax({
                type: "POST",
                url: "/Master/UpdateDepartment",
                data: Department,
                success: (Result) => {
                    $("#success_Department_Popup").css('display', 'none !important');
                    if (Result > 0) {
                        swal.fire({
                            title: "Updated Successfully",
                            text: "",
                            icon: "success",
                            allowOutsideClick: false  // This prevents closing on outside click
                        }).then((resultValue) => {
                                window.location.href = "/Master/Department";
                        });

                    }
                    else {
                        swal.fire({
                            title: "Something error",
                            text: "",
                            icon: "error",
                            allowOutsideClick: false  // This prevents closing on outside click
                        }).then((resultValue) => {
                                window.location.href = "/Master/Department";
                        });

                    }
                    $('.loader').addClass('d-none');
                },
                error: (Result) => {
                    $('.loader').addClass('d-none');
                }
            });
        });

    });


    $('#btnDepartment').click(function () {
        var urlToRedirect = '@Url.Action("Department", "Master")';
        window.location.href = urlToRedirect;
    });
    $(document).ready(function () {
        $('#Create_Popup').modal({
            backdrop: 'static',
            keyboard: false
        })
        $('#success_Department_Popup').modal({
            backdrop: 'static',
            keyboard: false
        })
    });
</script>