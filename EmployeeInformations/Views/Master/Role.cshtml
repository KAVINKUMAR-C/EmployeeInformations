@using EmployeeInformations.Model.MasterViewModel;
@model RoleTableViewModel
@{
    ViewBag.Title = "Role";
    Layout = "_Layout";
}

<div class="nk-block-head nk-block-head-sm">
    <div class="nk-block-between">
        <div class="nk-block-head-content">
            <h3 class="nk-block-title page-title">Role Details</h3>
        </div><!-- .nk-block-head-content -->
        <div class="d-flex mb-1">
            @* @Html.ActionLink("Create","CreateRole","Master", null, new { @class = "btn btn-primary ml-auto mt-auto mb-auto btn-sm mr-2" })*@
            <input type="button" class="btn btn-primary ml-auto mt-auto mb-auto btn-sm" id="CreateRole" value="Create" />
        </div>
    </div><!-- .nk-block-between -->
</div>

<div class="card card-bordered card-preview">
    <div class="card-inner table-card">
        <table class="display employee-holiday-table mb-3 no-sorting" style="width:100%" data-auto-responsive="false" id="getRole">
            <thead>
                <tr class="nk-tb-item table-header">
                    <th class="nk-tb-col"><span class="sub-text">Name</span></th>
                    <th class="nk-tb-col"><span class="sub-text">Status</span></th>
                    <th class="nk-tb-col tb-col"><span class="sub-text">Action</span></th>
                    @*<th class="nk-tb-col nk-tb-col-tools">
                    <div class="nk-tb-col py-0 border-0">
                    <ul class="nk-tb-actions gx-1 my-n1">
                    <li class="me-n1">
                    <div class="dropdown">
                    <a href="#" class="dropdown-toggle btn btn-icon btn-trigger" data-bs-toggle="dropdown"><em class="icon ni ni-more-h"></em></a>

                    </div>
                    </li>
                    </ul>
                    Action
                    </div>
                    </th>*@
                </tr>
            </thead>

            <tbody id="displayRole">
                @if (Model.RoleTableMaster.Count() > 0)
                {
                    @foreach (var item in Model.RoleTableMaster)
                    {
                        <tr class="nk-tb-item">
                            <td class="nk-tb-col tb-col">
                                <b class="tb-sub text-primary">@item.RoleName</b>
                            </td>
                            @if (item.IsActive)
                            {
                                <td class="nk-tb-col tb-col">
                                    <b class="badge badge-dot bg-success">Active</b>
                                </td>
                            }
                            else
                            {
                                <td class="nk-tb-col tb-col">
                                    <b class="badge badge-dot bg-danger">In Active</b>
                                </td>
                            }
                            <td class="nk-tb-col tb-col">

                                <div class="nk-tb-col nk-tb-col-tools py-0 border-0">
                                    <ul class="nk-tb-actions gx-1 my-n1">
                                        <li class="me-n1">
                                            <div class="dropdown">
                                                <a href="#" class="dropdown-toggle btn btn-icon btn-trigger" data-bs-toggle="dropdown"><em class="icon ni ni-more-h"></em></a>
                                                <div class="dropdown-menu dropdown-menu-end">
                                                    <ul class="link-list-opt no-bdr">
                                                        <li><a href="javascript:void(0)" class="btnUpdate" data-id="@item.RoleId" data-rolename="@item.RoleName" data-isactive="@item.IsActive"><em class="icon ni ni-edit"></em><span>Edit</span></a></li>
                                                        <li><a href="javascript:void(0)" id="btnDelete" data-id="@item.RoleId"><em class="icon ni ni-delete"></em><span>Delete</span></a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                        <!-- .nk-tb-item  -->
                    }
                }
            </tbody>
        </table>
    </div>
</div>


<div class="modal" id="success_DeleteRole_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content p-3 text-center">
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">
                <h4 class="nk-modal-title"> Deleted Successfully!</h4>
            </div>

            <!-- Modal footer -->
            <div class="text-center" id="btnCloseDeleteRole">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>

    </div>
</div>

<div class="modal" id="success_Role_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Status</h5>
            </div>

            <div class="modal-body" id="txtSuccessMeg">

                <div class="col-12 d-flex mb-2">
                    <label class="form-label my-auto">Role</label>
                    <div class="form-group m-0">
                        <lable class="badge badge-sm bg-outline-primary ml-2" id="RoleName"> </lable>
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        <div class="custom-control custom-control-sm custom-checkbox">
                            <input type="checkbox" name="chkIsActive" class="custom-control-input chkIsActive" id="chkIsActive">
                            <label class="custom-control-label" for="chkIsActive">Status</label>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 d-flex mt-3 p-0">
                    <input type="button" class="btn btn-primary ml-auto mr-3" id="btnCreate" value="Save" />
                    <input type="button" class="btn btn-danger" id="btnCloseCreateRole" value="Cancel" />
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="Create_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Role</h5>
            </div>
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">

                <div class="col-12">
                    <div class="form-group">
                        <label class="form-label">Name <span class="required" style="color: #FF0000">*</span></label>
                        <input type="text" class="form-control" id="txt-RoleName" />
                        @Html.ValidationMessageFor(m => m.RoleName,"",new { @class = "error text-danger", id = "errValid-RoleName"})
                        <span id="errVerify-RoleName" style="display:none;" class="error text-danger">Name already exists! </span>
                    </div>
                    <span class="error text-danger" id="errValid-RoleName"></span>
                </div>

                <div class="col-lg-12 d-flex mt-3 p-0">
                    <input type="button" class="btn btn-primary ml-auto mr-3" id="btnCreateRoleName" value="Save" />
                    <input type="button" class="btn btn-danger" id="btnCloseRoleName" value="Cancel" />
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {
        $('#getRole').DataTable({
            "bInfo": true,
            "paging": true
        });
    });
    //------------------------------------------------------------------------------------------------------------------------------------------------

    // Update role

    $('#getRole').on('click', '.btnUpdate', function () {

        $("#success_Role_Popup").modal('show');
        var roleName = $(this).data("rolename");
        var isactive = $(this).data("isactive");
        $("#RoleName").text(roleName);

        isactive == 'True' ? $('.chkIsActive').prop('checked', true) : $('.chkIsActive').prop('checked', false);

        $("#roleAction").val(isactive);
        var id = $(this).data("id");

        $('#success_Role_Popup').on('click', '#btnCreate', function () {

            var roleAction = $('.chkIsActive').prop('checked');
            var Role = {
                RoleId: id,
                IsActive: roleAction
            };

            $('.loader').removeClass('d-none');

            $.ajax({
                type: "POST",
                url: "/Master/DeleteIsActive",
                data: Role,
                success: (result) => {
                    $("#success_Role_Popup").css('display', 'none !important');
                    if (result > 0) {
                        swal.fire({
                                        title: "Updated Successfully",
                                        text: "",
                                        icon: "success",
                                        allowOutsideClick: false  // This prevents closing on outside click
                                    }).then((resultValue) => {
                                           if (resultValue.isConfirmed) {
                                window.location.href = "/Master/Role";
                            };
                                    });
                        
                    }
                    else {
                        swal.fire({
                                        title: "Something error",
                                        text: "",
                                        icon: "error",
                                        allowOutsideClick: false  // This prevents closing on outside click
                                    }).then((resultValue) => {
                                           window.location.href = "/Master/RelievingReason";
                                    });
                        
                    }
                    $('.loader').addClass('d-none');
                },
                error: (result) => {
                    $('.loader').addClass('d-none');
                }
            });
        });

    });
    //----------------------------------------------------------------------------------------------------------------------------------------


    $("#btnCloseCreateRole").click(function () {
        $("#success_Role_Popup").hide();
        var urlToRedirect = '@Url.Action("Role","Master")';
        window.location.href = urlToRedirect;
    });

    // Delete role

    $('#getRole').on('click', '#btnDelete', function () {
        Swal.fire({
            title: 'Are you sure want to delete?',
            // text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#1ee0ac',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes',
            cancelButtonText: 'No',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                var id = $(this).data("id")
                var Role = {
                    RoleId: id
                };

                $('.loader').removeClass('d-none');

                $.ajax({
                    type: "POST",
                    url: "/Master/DeleteRole",
                    data: Role,
                    success: (result) => {
                        if (result == true) {
                            swal.fire({
                                        title: "Deleted Successfully!",
                                        text: "",
                                        icon: "success",
                                        allowOutsideClick: false  // This prevents closing on outside click
                                    }).then((resultValue) => {
                                            window.location.href = "/Master/Role";
                                    });
                            
                        }
                        else {
                            swal.fire({
                                        title: "Something error",
                                        text: "",
                                        icon: "error",
                                        allowOutsideClick: false  // This prevents closing on outside click
                                    }).then((resultValue) => {
                                           window.location.href = "/Master/Role";
                                    });
                            
                        }
                        $('.loader').addClass('d-none');
                    },
                    error: (result) => {
                        $('.loader').addClass('d-none');
                    }

                });
            }
        });

    });
    //---------------------------------------------------------------------------------------------------------------------------


    $(document).ready(function () {
        $("#CreateRole").click(function () {
            $("#Create_Popup").modal('show');
        });
    });

    $('#btnCloseRoleName').click(function () {
        var urlToRedirect = '@Url.Action("Role","Master")';
        window.location.href = urlToRedirect;
    });

    $("#txt-RoleName").keyup(function () {
        $("#errValid-RoleName").text("");
        $("#errVerify-RoleName").hide();
        if ($("#txt-RoleName").val() == "") {
            $("#errValid-RoleName").text("Name field is required");
        }
    });

    // Create role

    $("#btnCreateRoleName").click(function () {
        var formData = new FormData();
        var isValid = true;
        $("#errVerify-RoleName").hide();
        $("#errValid-RoleName").text("");

        if ($("#txt-RoleName").val() == "") {
            $("#errValid-RoleName").text("Name field is required");
            isValid = false;
        }

        var roleName = $("#txt-RoleName").val();
        formData.append("RoleName", roleName);
        
        if (isValid) {    
            var url = "/Master/AddRole";
            $.ajax({
                type: "POST",
                url: url,
                data: formData,
                contentType: false,
                processData: false,
                beforeSend: function () {
                    $('.loader').removeClass('d-none');
                },
                success: function (Result) {
                    $('.loader').addClass('d-none');
                    $("#Create_Popup").css('display', 'none !important');
                    if (Result.roleNameCount == 1) {
                        $('.loader').addClass('d-none');
                        $("#errVerify-RoleName").show();
                        return false;
                    }
                    else {
                        if (Result.roleId > 0) {
                            swal.fire({
                                        title: "Added Successfully",
                                        text: "",
                                        icon: "success",
                                        allowOutsideClick: false  // This prevents closing on outside click
                                    }).then((resultValue) => {
                                           if (resultValue.isConfirmed) {
                                    window.location.href = "/Master/Role";
                                };
                                    });
                            
                        }
                        else {
                            swal.fire({
                                        title: "Something error",
                                        text: "",
                                        icon: "error",
                                        allowOutsideClick: false  // This prevents closing on outside click
                                    }).then((resultValue) => {
                                            window.location.href = "/Master/Role";
                                    });
                            
                        }
                    }
                        
                },
                complete: function () {
                    $('.loader').addClass('d-none');
                }
            });   
        }
        else {
            $('.loader').addClass('d-none');
            $("#errValid-RoleName").show();
            return false;
        }
    });
    $(document).ready(function () {
        $('#Create_Popup').modal({
            backdrop: 'static',
            keyboard: false
        })
        $('#success_Role_Popup').modal({
            backdrop: 'static',
            keyboard: false
        })
    });

</script>
