@using EmployeeInformations.Model.OnboardingViewModel;
@model OBQualificationViewModel

<div class="card-title mb-4">
    <h6 class="title">Qualification Information</h6>
</div>

<div class="tab-pane px-3">
    <div class="card my-4 boxshadow-none edit-page table-card" data-simplebar>
        <table class="table" id="getdata">
            <thead>
                <tr class="nk-tb-item table-header">
                    <th>Qualification</th>
                    <th>Institution Name</th>
                    <th>Percentage</th>
                    <th>Year Of Passing</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Qualifications.Count() > 0)
                {
                    foreach (var item in Model.Qualifications)
                    {
                        <tr class="nk-tb-item">
                            <td class="nk-tb-col">
                                @item.QualificationType
                            </td>
                            <td class="nk-tb-col">
                                @item.InstitutionName
                            </td>
                            <td class="nk-tb-col">
                                @item.Percentage %
                            </td>

                            <td class="nk-tb-col">
                                @item.YearOfPassing
                            </td>
                            <td class="nk-tb-col">
                                <div class="nk-tb-col nk-tb-col-tools py-0 border-0">
                                    <ul class="nk-tb-actions gx-1 my-n1">
                                        <li class="me-n1">
                                            <div class="dropdown">
                                                <a href="#" class="dropdown-toggle btn btn-icon btn-trigger" data-bs-toggle="dropdown"><em class="icon ni ni-more-h"></em></a>
                                                <div class="dropdown-menu dropdown-menu-end">
                                                    <ul class="link-list-opt no-bdr">
                                                        <li><a href="javascript:void(0)" id="btnDownload" data-id="@item.QualificationId"><em class="icon ni ni-download"></em><span>Download</span></a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr class="nk-tb-item">
                        <td class="text-danger" style="text-align:center;" colspan="4">No record found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>

    $('.viewActive li').removeClass('active');
    $(".empQualificationInfo").addClass('active');

    //Download Document
    $('#getdata').on('click', '#btnDownload', function () {

        var qualificationId = $(this).data("id");
        window.location.href = "/OBEmployees/DownloadQualificationFile?qualificationId=" + qualificationId;
        $('.loader').addClass('d-none');

    });

</script>