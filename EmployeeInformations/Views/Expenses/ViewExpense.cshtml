@using EmployeeInformations.Common
@using EmployeeInformations.Model.ExpensesViewModel;
@using EmployeeInformations.Common.Enums;
@using Microsoft.AspNetCore.Http;
@model GetExpenses
@{
    var lastViewPage = Context.Session.GetString("LastView");
}
<div class="leave-dtl-block mb-3">
    <div class="nk-block-head nk-block-head-sm">
        <div class="nk-block-between">
            <div class="nk-block-head-content">
                <h3 class="nk-block-title page-title">View Expense Details</h3>
            </div><!-- .nk-block-head-content -->
            <div class="d-flex mb-1">
                @Html.ActionLink("Back", lastViewPage, "Expenses", null, new { @class = "btn btn-secondary ml-auto mt-auto mb-auto mr-2" })
            </div>
        </div><!-- .nk-block-between -->
    </div>


    <div class="card card-bordered card-preview view-block">
        <div class="card-header data-head">
            <h6>Expense Details</h6>
        </div>
        <div class="card-inner">
            <form autocomplete="off">
                <div class="row">

                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Employee Name</label>
                            <label class="view-text">@Model.EmployeeName</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Title</label>
                            <label class="view-text">@Model.ExpenseTitle</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">From Date</label>
                            <label class="view-text">@Model.FromDate.ToString(Constant.DateFormat)</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">To Date</label>
                            <label class="view-text">@Model.ToDate.ToString(Constant.DateFormat)</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Total Amount</label>
                            <label class="view-text">@Model.Amount</label>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="leave-dtl-block">
<div class="card card-bordered card-preview view-block">
    <div class="card-header data-head">
        <h6>Expense Attachments Details</h6>
    </div>
    <div class="card-inner">
        <form autocomplete="off">
            <div class="row">

                @if (Model.ExpenseDetailView.Count() > 0)
                {
                    foreach (var item in Model.ExpenseDetailView)
                    {

                        <div class="col-lg-4 col-md-6">
                            <div class="form-group">
                                <label class="form-label w-100">Amount</label>
                                <label class="view-text">@item.Amount</label>
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-6">
                            <div class="form-group">
                                <label class="form-label w-100">Category</label>
                                <label class="view-text">@item.ExpenseCategory</label>
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-6">
                            <div class="form-group">
                                <label class="form-label w-100">Bill Number</label>
                                <label class="view-text">@item.BillNumber</label>
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-6">
                            <div class="form-group">
                                <label class="form-label w-100">Status</label>
                                @if (Model.IsApproved == 0)
                                {
                                    <label class="view-text">Pending</label>
                                }
                                else if (Model.IsApproved == 1)
                                {
                                    <label class="view-text">Confirmed</label>
                                }
                                else if (Model.IsApproved == 2)
                                {
                                    <label class="view-text">Rejected By TeamLead</label>
                                }
                                else if (Model.IsApproved == 3)
                                {
                                    <label class="view-text">Collected</label>
                                }
                                else if (Model.IsApproved == 4)
                                {
                                    <label class="view-text">Rejected By HR</label>
                                }
                            </div>
                        </div>
                        @if (Model.Reason != null)
                        {
                            <div class="col-lg-4 col-md-6">
                                <div class="form-group">
                                    <label class="form-label w-100">Reason</label>
                                    <label class="view-text">@Model.Reason</label>
                                </div>
                            </div>
                        }
                        <div id="hide_imgName" class="text-primary mt-1">
                            <ul class="displayExpenseDoc d-flex flex-wrap p-0">
                                <label class="form-label w-100">Document</label>
                                <li class="mt-3">
                                    <img class='mt-1' src="~/images/image-icon.png" style='height: 40px;' />
                                    <lable id="displayDocumentName" class="text-white">@item.ExpenseName</lable>
                                </li>
                            </ul>
                        </div>

                    }
                }
            </div>
        </form>
    </div>
</div>
</div>


<script>

    $(".displayExpenseDoc").on('click', 'li', function () {
        var imgName = $(this).text().trim();
        var urlName = window.location.origin;
        window.open(urlName + '/Management/Expenses/' + imgName + '')
    });
</script>