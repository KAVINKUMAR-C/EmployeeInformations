<script>


    $(document).ready(function () {

        var columnIndex = "";
        var columnDirection = "";
        var entries = 10;
        BindExpenseEmployeesData();

        function BindExpenseEmployeesData() {
            var table = $("#getExpensesData").DataTable();

            if (table) {
                table.destroy();
            }
            $('#getExpensesData').DataTable({

                serverSide: true,
                processing: true,
                pageLength: entries,
                ajax: {
                    url: "/Expenses/GetEmployeeExpenses",
                    type: 'Get',
                    data: function (d) {
                        var searchFilter = document.getElementById("getExpensesData_filter"); // get search div id
                        var searchInput = searchFilter.querySelector("input[type='search']");  // get search div input
                        var searchValue = searchInput.value;  // get search value
                        var leaveEntry = document.getElementById("getExpensesData_length"); //get entries div id
                        var entrySelect = leaveEntry.querySelector("select"); //get entries div select
                        entries = entrySelect.value; // get entries value
                        d.sSearch = searchValue; // Pass search query
                        d.iDisplayStart = d.iDisplayStart || 0;
                        d.iDisplayLength = d.iDisplayLength || entries;
                        d.sEcho = d.start;
                        d.ColumnName = columnIndex;
                        d.ColumnDirection = columnDirection;

                    }
                },

                columns: [
                    {

                        data: 'employeeName',
                        render: function (data, type, row, meta) {

                            return (row.employeeStatus == true ?
                                "<a href='javascript:void(0)' id='viewEmployee' data-empid=" + row.empId + "><span class='badge badge-dim bg-danger'>" + row.employeeName + "</span></a>" :
                                "<a href='javascript:void(0)' id='viewEmployee' data-empid=" + row.empId + "><span class='badge badge-dim bg-primary'>" + row.employeeName + "</span></a>")

                        }
                    },

                    {
                        data: 'title',
                        render: function (data, type, row) {
                            return "<span class='font-weight-bold'>" + row.expenseTitle + "</span>"
                        }
                    },

                    {
                        data: 'fromDate',
                        render: function (data, type, row) {
                            return "<span>" + dateFormat(row.fromDate) + "</span>"
                        }
                    },

                    {
                        data: 'toDate',
                        render: function (data, type, row) {
                            return "<span>" + dateFormat(row.toDate) + "</span>"
                        }
                    },

                    {
                        data: 'amount',
                        render: function (data, type, row) {
                            return "<span class='badge badge-dim bg-info'>" + parseFloat(row.amount).toFixed(2) + "</span>"
                        }
                    },

                    {
                        data: 'reason',
                        render: function (data, type, row) {
                            if (row.reason == null) { row.reason = "" } else { var trimNewValue = row.reason.replace(/'/g, "").trim(); }
                            return "<div class='leave-reason'><p type='button' class='tb-sub font-weight-bold' data-bs-toggle='tooltip' data-bs-placement='bottom' title='" + trimNewValue + "'>" + row.reason + "</p></div>"
                        }
                    },

                    {
                        data: 'approvalStatus',
                        render: function (data, type, row) {

                            var approvalStatusClr = "";
                            if (row.isApproved == 1 || row.isApproved == 3) {
                                approvalStatusClr = "bg-success";
                            }
                            else if (row.isApproved == 0) {
                                approvalStatusClr = "bg-warning";
                            }
                            else if (row.isApproved == 2 || row.isApproved == 4) {
                                approvalStatusClr = "bg-danger";
                            }
                            return "<b class='badge badge-sm badge-dot has-bg " + approvalStatusClr + " d-sm-inline-flex'>" + row.approvalStatus + "</b>"
                        }

                    },

                    {
                        data: 'null',
                        "orderable": false,
                        render: function (data, type, row) {
                            var html = "<div class='nk-tb-col nk-tb-col-tools py-0 border-0'><ul class='nk-tb-actions gx-1 my-n1'><li class='me-n1'><div class='dropdown'><a href='#' class='dropdown-toggle btn btn-icon btn-trigger' data-bs-toggle='dropdown'><em class='icon ni ni-more-h'></em></a><div class='dropdown-menu dropdown-menu-end'><ul class='link-list-opt no-bdr'><li><a href='javascript:void(0)' id='btnViewLeaveDetail' data-empid=" + row.empId + " data-id=" + row.expenseId + " data-empname=" + row.employeeName + "><em class='icon ni ni-eye'></em><span>View</span></a></li>";
                            
                                if (row.empId == @loginEmpId) {
                                    if (row.isApproved == 0) {
                                        html += "<li><a href='javascript:void(0)' id='EditBtn' data-id=" + row.expenseId + "><em class='icon ni ni-edit'></em><span>Edit</span></a></li>" +
                                            "<li><a href='javascript:void(0)' id='btnDelete' data-id=" + row.expenseId + "><em class='icon ni ni-delete'></em><span>Delete</span></a></li>";
                                    }
                                }                            

                            html += "</ul></div></div></li></ul></div>";
                            return html;
                        }

                    },
                ],

                "columnDefs": [
                    { "width": "300px", "targets": [0, 1, 2, 3, 4, 5] },
                    { "width": "200px", "targets": [6] }
                    // { 'sortable': false, 'targets': [7] }
                ],

                "createdRow": function (row, data, dataIndex, settings) {
                    // Add custom class to the row
                    $(row).addClass('nk-tb-item');
                    // Add custom classes to each cell in the row if necessary
                    $(row).find('td').addClass('nk-tb-col tb-col');
                },

            });
            // $('[data-bs-toggle="tooltip"]').tooltip();
            $("body").tooltip({ selector: '[data-bs-toggle=tooltip]' });
        }

        $(document).on('click', '.sorting, .sorting_asc, .sorting_desc', function (e) {
            var target = e.target;
            var parent = target.parentNode;
            var index = [].indexOf.call(parent.children, target);

            if ($(this).hasClass('sorting_asc')) {
                columnDirection = 'desc';
            }
            else {
                columnDirection = 'asc'; // Assuming default sorting direction is descending
            }

            columnIndex = $(this).data('id');
        });

    });

    function dateFormat(startDate) {

        var dateObject = new Date(startDate);
        var day = ("0" + dateObject.getDate()).slice(-2);
        var month = ("0" + (dateObject.getMonth() + 1)).slice(-2);
        var year = dateObject.getFullYear();
        var formattedDate = day + "/" + month + "/" + year;
        return formattedDate;
    }

    $('#btnBack').click(function () {
        var urlToRedirect = '@Url.Action("Expenses", "Expenses")';
        window.location.href = urlToRedirect;
    });

    $('#getExpensesData').on('click', '#viewEmployee', function () {
        var empId = $(this).data('empid');
        window.location.href = "/Employees/ViewEmployee?empId=" + empId;
    });

    $('#btnCancel').click(function () {
        var urlToRedirect = '@Url.Action("Expenses", "Expenses")';
        window.location.href = urlToRedirect;
    });

    $('#getExpensesData').on('click', '#EditBtn', function () {
        var expenseId = $(this).data("id");
        PageUtil.goToContent("/Expenses/EditExpenses?expenseId=" + expenseId);
    });


    $("#RejectReason").keyup(function () {
        $("#errValid-Reason").text("");
        if ($("#RejectReason").val() == "") {
            $("#errValid-Reason").text("Reason field is required");
        }
    });

    $("#ApprovedReason").keyup(function () {
        $("#errValid-ReasonApproved").text("");
        if ($("#ApprovedReason").val() == "") {
            $("#errValid-ReasonApproved").text("Reason field is required");
        }
    });    

    // Delete Expense

    $('#getExpensesData').on('click', '#btnDelete', function () {
        Swal.fire({
            title: 'Are you sure want to delete?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#1ee0ac',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes',
            cancelButtonText: 'No',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                var expenseId = $(this).data("id");
                var expenses = {
                    ExpenseId: expenseId
                };
                $('.loader').removeClass('d-none');

                $.ajax({
                    type: "POST",
                    url: "/Expenses/DeleteExpenses",
                    data: expenses,
                    success: (Result) => {
                        if (Result = true) {
                            swal.fire({
                                title: "Deleted Successfully",
                                text: "",
                                icon: "success",
                                allowOutsideClick: false  // This prevents closing on outside click
                            }).then((resultValue) => {
                                window.location.href = "/Expenses/EmployeeExpenses";
                            });
                        }
                        else {
                            swal.fire({
                                title: "Something error",
                                text: "",
                                icon: "error",
                                allowOutsideClick: false  // This prevents closing on outside click
                            }).then((resultValue) => {
                                window.location.href = "/Expenses/EmployeeExpenses";
                            });

                        }
                        $('.loader').addClass('d-none');
                    },
                    error: (result) => {
                        $('.loader').addClass('d-none');
                    }
                });
            }
        });
    });
    //------------------------------------------------------------------------------------------------------------------------------

    // Expense Approval

    $('#getExpensesData').on('click', '#btnLeaveApproved', function () {
        Swal.fire({
            title: 'Are you sure want to Approve?',
            //  text: "You are Approve this request!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#1ee0ac',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes',
            cancelButtonText: 'No',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {

                $("#success_ApprovedExpense_Popup").modal('show');
                $("#errValid-ReasonApproved").text("");
                var employeename = $(this).data("empname");
                $("#employeeName").text(employeename);
                var id = $(this).data("id");
                var empid = $(this).data("empid");
                $("#success_ApprovedExpense_Popup").on('click', "#btnapproved", function () {
                    var isValid = true;
                    var reason = $("#ApprovedReason").val();
                    if (reason == "") {
                        $("#errValid-ReasonApproved").text("Reason field is required ");
                        isValid = false;
                    }
                    var expenses = {
                        ExpenseId: id,
                        reason: reason
                    };
                    if (isValid) {
                        $('.loader').removeClass('d-none');
                        $.ajax({
                            type: "POST",
                            url: "/Expenses/ApprovedExpense",
                            data: expenses,
                            success: (Result) => {
                                if (Result = true) {
                                    // $("#success_Approved_Popup").show();
                                    $("#success_ApprovedExpense_Popup").hide();
                                    $("#success_Approved_Popup").hide();
                                }
                                // $("#btnCloseApproved").css('display', 'none !important');
                                swal.fire("Approved Successfully", "", "success").then((result) => {
                                    if (result.isConfirmed) {
                                        window.location.href = "/Expenses/Expenses";
                                    };
                                });
                                $('.loader').addClass('d-none');
                            },
                            error: (Result) => {
                                $('.loader').addClass('d-none');
                            }
                        });
                    }
                    else {
                        return false;
                    }



                });
                $("#btnCloseApprove").click(function () {
                    window.location.href = "/Expenses/Expenses";
                })

            }

        })
    });

    // Expense Reject

    $('#getExpensesData').on('click', '#rejectLeaveBtn', function () {

        Swal.fire({
            title: 'Are you sure want to Reject?',
            //text: "You are Reject this request!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#1ee0ac',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes',
            cancelButtonText: 'No',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                //$('#success_Reject_Popup').show();

                $("#errValid-Reason").text("");
                $("#success_Reject_Popup").modal('show');
                var employeename = $(this).data("empname");
                $("#employeeName").text(employeename);
                var id = $(this).data("id");
                $('#success_Reject_Popup').on('click', '#btnreject', function () {
                    var isValid = true;
                    if ($("#RejectReason").val() == "") {
                        $("#errValid-Reason").text("Reason field is required");
                        isValid = false;
                    }

                    var reason = $("#RejectReason").val();
                    var expenses = {
                        ExpenseId: id,
                        Reason: reason
                    };
                    if (isValid) {
                        $('.loader').removeClass('d-none');
                        $.ajax({
                            type: "POST",
                            url: "/Expenses/RejectExpense",
                            data: expenses,
                            success: (Result) => {
                                if (Result = 1) {
                                    $('#success_Reject_Popup').hide();
                                    $("#success_ReasonReject_Popup").hide();
                                    swal.fire("Rejected Successfully", "", "success").then((result) => {
                                        if (result.isConfirmed) {
                                            var urlToRedirect = '@Url.Action("Expenses", "Expenses")';
                                            window.location.href = urlToRedirect;
                                        };
                                    });
                                }
                                $('.loader').addClass('d-none');
                            },
                            error: (Result) => {
                                $('.loader').addClass('d-none');
                            }
                        });
                    }
                    else {
                        return false;
                    }

                })

                $("#btnCloseReject").click(function () {
                    window.location.href = "/Expenses/Expenses";
                })

            }
        })
    });

    // Amount approval

    $('#getExpensesData').on('click', '#btnAmountApproved', function () {
        Swal.fire({
            title: 'Are you sure to update Paid?',
            //  text: "You are Approve this request!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#1ee0ac',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes',
            cancelButtonText: 'No',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                $("#success_ApprovedExpense_Popup").modal('show');
                $("#errValid-ReasonApproved").text("");
                var expenseId = $(this).data("id");
                var empid = $(this).data("empid");
                var employeename = $(this).data("empname");
                $("#employeeName").text(employeename);
                $("#success_ApprovedExpense_Popup").on('click', "#btnapproved", function () {
                    var isValid = true;
                    var reason = $("#ApprovedReason").val();
                    if (reason == "") {
                        $("#errValid-ReasonApproved").text("Reason field is required ");
                        isValid = false;
                    }

                    var expenses = {
                        ExpenseId: expenseId,
                        Reason: reason
                    };

                    if (isValid) {
                        $('.loader').removeClass('d-none');
                        $.ajax({
                            type: "POST",
                            url: "/Expenses/AmountApprovedExpense",
                            data: expenses,
                            success: (Result) => {
                                if (Result = true) {
                                    swal.fire("Approved Successfully", "", "success").then((result) => {
                                        if (result.isConfirmed) {
                                            var urlToRedirect = '@Url.Action("Expenses", "Expenses")';
                                            window.location.href = urlToRedirect;
                                        };
                                    });
                                }

                                // $("#btnCloseApproved").css('display', 'none !important');

                                $('.loader').addClass('d-none');
                            },
                            error: (Result) => {
                                $('.loader').addClass('d-none');
                            }
                        });
                    }
                    else {
                        return false;
                    }
                });
                $("#btnCloseApprove").click(function () {

                    window.location.href = "/Expenses/Expenses";
                })
            }
        });
    });

    // Amount Reject

    $('#getExpensesData').on('click', '#rejectAmountBtn', function () {
        Swal.fire({
            title: 'Are you sure want to Reject?',
            //  text: "You are Approve this request!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#1ee0ac',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes',
            cancelButtonText: 'No',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                $("#errValid-Reason").text("");
                $("#success_Reject_Popup").modal('show');
                var expenseId = $(this).data("id");
                var empid = $(this).data("empid");
                var employeename = $(this).data("empname");
                $("#employeeName").text(employeename);
                $('#success_Reject_Popup').on('click', '#btnreject', function () {
                    var isValid = true;
                    if ($("#RejectReason").val() == "") {
                        $("#errValid-Reason").text("Reason field is required");
                        isValid = false;
                    }

                    var reason = $("#RejectReason").val();
                    var expenses = {
                        ExpenseId: expenseId,
                        Reason: reason
                    };
                    if (isValid) {
                        $('.loader').removeClass('d-none');
                        $.ajax({
                            type: "POST",
                            url: "/Expenses/AmountRejectExpense",
                            data: expenses,
                            success: (Result) => {
                                if (Result = true) {
                                    $("#success_Approved_Popup").hide();
                                }

                                swal.fire("Rejected Successfully", "", "success").then((result) => {
                                    if (result.isConfirmed) {
                                        var urlToRedirect = '@Url.Action("Expenses", "Expenses")';
                                        window.location.href = urlToRedirect;
                                    };
                                });
                                $('.loader').addClass('d-none');
                            },
                            error: (Result) => {
                                $('.loader').addClass('d-none');
                            }
                        });
                    }
                })

                $("#btnCloseReject").click(function () {
                    window.location.href = "/Expenses/Expenses";
                })

            }
        });
    });


    $('#getExpensesData').on('click', '#btnViewLeaveDetail', function () {
        var expenseId = $(this).data("id");
        PageUtil.goToContent("/Expenses/ViewExpense?expenseId=" + expenseId);
