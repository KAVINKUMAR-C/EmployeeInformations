@using EmployeeInformations.Common
@using EmployeeInformations.Model.ExpensesViewModel;
@using Microsoft.AspNetCore.Http;
@using EmployeeInformations.Business.IService
@using EmployeeInformations.Common.Enums
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@inject IEmployeeInformationService employeeInformationService
@model ExpensesViewModel
@{
    ViewBag.Title = "EmployeeExpenses";
    Layout = "_Layout";
    var loginRoleId = Context.Session.GetInt32("RoleId");
    var loginEmpId = Context.Session.GetInt32("EmpId");

    var rolePrivileges = false;
    if (loginRoleId >= 0)
    {
        var id = loginRoleId.Value;
        int leaveSummaryModuleId = (int)EmployeesInformationsPages.EmployeeExpenses;
        rolePrivileges = await employeeInformationService.ReadAndWritePermissionByRoleId(leaveSummaryModuleId, id);
    }
}

<div class="nk-block-head nk-block-head-sm">
    <div class="nk-block-between">
        <div class="nk-block-head-content">
            <h3 class="nk-block-title page-title">Employee Expense Details</h3>
        </div><!-- .nk-block-head-content -->
        <div class="d-flex mb-1">
            @Html.ActionLink("Create", "AddExpenses", "Expenses", null, new { @class = "btn btn-primary ml-auto mt-auto mb-auto btn-sm" })
        </div>
    </div><!-- .nk-block-between -->
</div>

<div class="card card-bordered card-preview">
    <div class="card-inner table-card">

        <table class="display employee-holiday-table mb-3 no-sorting" style="width:100%" data-auto-responsive="false" id="getExpensesData">
            <thead>
                <tr class="nk-tb-item table-header">
                    <th class="nk-tb-col" data-id="employeeName"><span class="sub-text">Employee Name</span></th>
                    <th class="nk-tb-col" data-id="expenseTitle"><span class="sub-text">Title</span></th>
                    <th class="nk-tb-col" data-id="fromDate"><span class="sub-text">From Date</span></th>
                    <th class="nk-tb-col" data-id="toDate"><span class="sub-text">To Date</span></th>
                    <th class="nk-tb-col" data-id="amount"><span class="sub-text">Amount</span></th>
                    <th class="nk-tb-col" data-id="reason"><span class="sub-text">Reason</span></th>
                    <th class="nk-tb-col" data-id="isApproved"><span class="sub-text">Status</span></th>
                    @if (rolePrivileges)
                    {
                        <th class="nk-tb-col tb-col"><span class="sub-text">Action</span></th>

                    }
                </tr>
            </thead>
        </table>
    </div>
</div>

