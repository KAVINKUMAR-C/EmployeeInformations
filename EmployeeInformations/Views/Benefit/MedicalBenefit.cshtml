                    <div class="form-group">
                        <label class="form-label">Type</label>
                        <div>
                            @Html.DropDownListFor(m => m.BenefitTypeId, new SelectList(Model.BenefitTypes, "BenefitTypeId", "BenefitName"), "--Select Type--", new { @class = "form-control", id = "BenefitTypeId", @disabled = true })
                        </div>
                        <span class="error text-danger" id="errValid-BenefitTypeId"></span>
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        <label class="form-label">Scheme<span class="required" style="color: #FF0000">*</span></label>
                        @Html.TextBoxFor(m => m.Scheme, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Scheme, "", new { @class = "error text-danger", id = "errValid-Scheme" })
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        <label class="form-label">Category<span class="required" style="color: #FF0000">*</span></label>
                        @Html.TextBoxFor(m => m.Category, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Category, "", new { @class = "error text-danger", id = "errValid-Category" })
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        <label class="form-label">Cost<span class="required" style="color: #FF0000">*</span></label>
                        @if (Model.Cost == 0)
                        {
                            <input type="text" id="Cost" class="form-control" value="">
                        }
                        else
                        {
                            @Html.TextBoxFor(m => m.Cost, new { @class = "form-control" })
                        }
                        @Html.ValidationMessageFor(m => m.Cost, "", new { @class = "error text-danger", id = "errValid-Cost" })
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        <label class="form-label">Member<span class="required" style="color: #FF0000">*</span></label>
