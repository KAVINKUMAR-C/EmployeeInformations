                    <div class="form-group">
                        <label class="form-label">Employee Name<span class="required" style="color: #FF0000">*</span></label>
                        <div>
                            @Html.DropDownListFor(m => m.EmpId, new SelectList(Model.reportingPeople, "EmpId", "EmployeeName"), "--Select Employee Name--", new { @class = "form-control" })
