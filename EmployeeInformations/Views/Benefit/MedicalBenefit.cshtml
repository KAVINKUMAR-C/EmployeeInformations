            <div class="modal-header">
                <h5 class="modal-title">Medical Benefits</h5>
            </div>
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">
                @Html.HiddenFor(m => m.MedicalBenefitId)
