<div class="leave-dtl-block">
    <div class="nk-block-head nk-block-head-sm">
        <div class="nk-block-between">
            <div class="nk-block-head-content">
                <h3 class="nk-block-title page-title">View Benefit</h3>
            </div><!-- .nk-block-head-content -->
            <div class="d-flex mb-1">                
                @Html.ActionLink("Back","BenefitTab","Benefit", null, new { @class = "btn btn-secondary ml-auto mt-auto mb-auto mr-2" })
            </div>
        </div><!-- .nk-block-between -->
    </div>


    <div class="card card-bordered card-preview view-block">
        <div class="card-inner">
            <form>
                <div class="row">
                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Employee Name</label>
                            <label class="view-text">@Model.EmployeeName</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Benefit Name</label>
                            <label class="view-text">@Model.BenefitName</label>
                        </div>
                    </div>
                                                
                </div>
            </form>
        </div>
    </div>
</div>


