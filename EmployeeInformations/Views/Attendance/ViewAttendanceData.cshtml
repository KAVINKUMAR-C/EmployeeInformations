@using EmployeeInformations.Common.Enums
@using EmployeeInformations.Common
@using EmployeeInformations.Model.AttendanceViewModel;
@model AttendaceListViewModels
@{
    ViewBag.Title = "ViewAttendanceData";
    Layout = "_Layout";
}

<div class="nk-block-head nk-block-head-sm">
    <div class="nk-block-between">
        <div class="nk-block-head-content">
            <h3 class="nk-block-title page-title">View In/Out Details</h3>
        </div><!-- .nk-block-head-content -->

    </div><!-- .nk-block-between -->
</div>


<div class="row">
    @Html.HiddenFor(e => e.RoleId)
    <div class="col-lg-3  col-md-6 autocomplete">
        <div class="form-group">
            <label class="form-label">Employees<span class="required" style="color: #FF0000">*</span></label>
            <div>
                @if (Model.RoleId == (Role.Employee))
                {
                    @Html.DropDownListFor(m => m.EmployeeId, new SelectList(Model.reportingPeople, "EmployeeId", "EmployeeIdWithName"), "--Select Employees--", new { @class = "form-control", id = "EmployeeId", disabled = "disabled" })
                }
                else
                {
                    @Html.DropDownListFor(m => m.EmployeeId, new SelectList(Model.reportingPeople, "EmployeeId", "EmployeeIdWithName"), "--Select Employees--", new { @class = "form-control", id = "EmployeeId" })
                }
            </div>
            @Html.ValidationMessageFor(m => m.EmployeeId, "", new { @class = "error text-danger", id = "errValid-EmployeeName" })
        </div>
    </div>

    <div class="col-lg-2 col-md-6">
        <div class="form-group">
            <label class="form-label">Start Date<span class="required" style="color: #FF0000">*</span></label>
            <div id="startdatepicker" class="input-group date" data-date-format="dd/mm/yyyy">
                @Html.TextBoxFor(m => m.LogDate, new { @class = "form-control", id = "startDate" })
                <span class="input-group-addon">
                    <i class="icon ti-calendar"></i>
                </span>
            </div>
            <span class="error text-danger" id="errValid-StartDate"></span>
        </div>
    </div>


    <div class="col-lg-2 col-md-6">
        <div class="form-group">
            <label class="form-label" id="leaveToLabel">End Date<span class="required" style="color: #FF0000">*</span></label>
            <div id="enddatepicker" class="input-group date" data-date-format="dd/mm/yyyy">
                @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control", id = "endDate" })
                <span class="input-group-addon">
                    <i class="icon ti-calendar"></i>
                </span>
            </div>
            <span class="error text-danger" id="errValid-EndDate"></span>
            <span id="errVerify-endDate" style="display:none;" class="error text-danger"> Please select <b>End Time</b> should not be less than <b>Start Time</b> </span>
        </div>
    </div>

    @* start time and end time *@
    <div class="col-lg-4 col-md-6">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label class="form-label">Start Time</label>
                    <div class="input-group" id="drp_FromTime">
                        <input type="text" class="form-control" id="StartTime" placeholder="" value="">
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <label class="form-label">End Time</label>
                    <div class="input-group" id="drp_ToTime">
                        <input type="text" class="form-control" id="EndTime" placeholder="" value="">
                    </div>                  
                    <span id="errVerify-EndTime" class="error text-danger" style="display:none;"> Please select <b>End Time</b> should not be less than <b>Start Time</b> </span>
                </div>
            </div>
        </div>
    </div>


    @if (Model.EmployeeId == 0)
    {
        <div class="col-lg-2 col-md-6 autocomplete">
            <div class="form-group">
                <label class="form-label">Active / In Active<span class="required" style="color: #FF0000">*</span></label>
                <div>
                    @Html.DropDownListFor(m => m.EmployeeStatus, Html.GetEnumSelectList<EmployeeStatus>(), "--Select Active / In Active--", new { @class = "form-control", id = "status" })
                </div>
                <span class="error text-danger" id="errValid-Status"></span>
            </div>
        </div>
    }
    <div class="col in-out-search-btn">
        <div class="form-group">
            <button type="button" class="btn btn-primary icon-ch" id="btnFilterLeave" value="" /><i class="ti-search"></i></button>
        </div>
    </div>
    <div class="col d-flex justify-content-end download-send-btn">
        <button type="button" class="mr-3 btn btn-secondary icon-ch pdf-icon" id="generatepdfs"><img src="./images/pdf.png" /></button>
        <button type="button" class="mr-3 btn btn-secondary icon-ch" id="btnDownloadExcel" value="" /><i class="ti-download"></i></button>
        <button type="button" class="btn btn-secondary icon-ch" title="Send Mail" id="SendEmployeeInandOut"><em class="ni ni-send"></em></button>
    </div>
</div>

<div class="modal" id="successEmailSending_Msg_Popup" style="display:none;" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content p-3 text-center">

            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">
                <h4 class="nk-modal-title"> Email Sent Successfully! </h4>
            </div>

            <!-- Modal footer -->
            <div class="text-center" id="btnCloseChangePassword">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

<div class="modal" id="filterMandatory_Msg_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content p-3 text-center">

            <!-- Modal body -->
            <div class="modal-body" id="txtValidationMeg">
                <h4 class="nk-modal-title"> Select Mandatory Fields! </h4>
            </div>

            <!-- Modal footer -->
            <div class="text-center" id="btnCloseFilterValidation">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>


<div class="card card-bordered card-preview">
    @if (Model.RoleId == (Role.Employee))
    {
        <div class="col-lg-12" id="timeing" style="text-align: center;">
            <div class="form-group">
                <label class="form-label text-info text-decoration-underline" style="text-align: center"> <span> <b>Timing</b>  </span> </label>
                <div>

                    <div id="timingDiv">
                        @if (Model.InsideOffice != null)
                        {
                            @if (Model.TotalSecounds < 25200)
                            {
                                <label class="form-label"><span id="insideOfficeTime1" class="text-danger">@Model.InsideOffice Hrs (Actual)</span> / <span id="totalHoursTime" class="text-primary">@Model.TotalHours Hrs (Total)</span></label>
                            }
                            else if (Model.TotalSecounds < 28800)
                            {
                                <label class="form-label"><span id="insideOfficeTime2" class="text-orange">@Model.InsideOffice Hrs (Actual)</span> / <span id="totalHoursTime" class="text-primary">@Model.TotalHours Hrs (Total)</span></label>
                            }
                            else if (Model.TotalSecounds > 28800)
                            {
                                <label class="form-label"><span id="insideOfficeTime3" class="text-success">@Model.InsideOffice Hrs (Actual)</span> / <span id="totalHoursTime" class="text-primary">@Model.TotalHours Hrs (Total)</span></label>
                            }
                        }
                        else
                        {
                            <label class="form-label"> <span id="insideOfficeTime" class="text-gray">00:00 Hrs (Actual)</span> / <span id="totalHoursTime" class="text-primary">00:00 Hrs (Total)</span> </label>
                        }
                    </div>

                </div>
            </div>
        </div>
    }

    <div class="card-inner table-card" id="attendanceInOutDiv">
        <table class="display employee-holiday-table mb-3 no-sorting" style="width:100%" data-auto-responsive="false" id="getAttendanceData">
            <thead>
                <tr class="nk-tb-item table-header">
                    <th class="nk-tb-col"><span class="sub-text">Employee Id</span></th>
                    @if (Model.RoleId < (Role.Employee))
                    {
                        <th class="nk-tb-col tb-col"><span class="sub-text">Employee Name</span></th>
                    }
                    <th class="nk-tb-col tb-col"><span class="sub-text">Date</span></th>
                    <th class="nk-tb-col tb-col"><span class="sub-text">Log Date Time</span></th>
                    <th class="nk-tb-col tb-col"><span class="sub-text">Log Time</span></th>
                    <th class="nk-tb-col tb-col"><span class="sub-text">Direction</span></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.ViewAttendanceLog.Count() > 0 && Model.ViewAttendanceLog != null)
                {
                    @foreach (var item in Model.ViewAttendanceLog)
                    {
                        <tr class="nk-tb-item">
                            <td class="nk-tb-col tb-col">
                                <b class="tb-sub text-primary">@item.EmployeeId</b>
                            </td>
                            @if (Model.RoleId < (Role.Employee))
                            {
                                <td class="nk-tb-col tb-col">
                                    @if (item.Status == true)
                                    {
                                        <a href="javascript:void(0)" class="viewEmployee" data-empid="@item.EmployeeCode"><span class="text-danger">@item.EmployeeName</span></a>
                                    }
                                    else
                                    {
                                        <a href="javascript:void(0)" class="viewEmployee" data-empid="@item.EmployeeCode"><span class="text-info">@item.EmployeeName</span></a>
                                    }


                                </td>
                            }

                            <td class="nk-tb-col tb-col">
                                <span>@item.LogDate</span>
                            </td>
                            <td class="nk-tb-col tb-col">
                                <span>@item.LogDateTime</span>
                            </td>
                            <td class="nk-tb-col tb-col">
                                <span>@item.LogTime</span>
                            </td>

                            <td class="nk-tb-col tb-col">
                                <span>@item.Direction</span>
                            </td>

                        </tr>
                        <!-- .nk-tb-item  -->
                    }
                }
            </tbody>
        </table>
    </div>
</div>

