            $("#errValid-Status").text("Status field is required");
        }
        else {
            $("#errValid-Status").text("");
        }
    });
    //--------------------------------------------------------------------------------------------------------------------------------------------------------

    // Filter Employee log data

    $("#btnFilterLeave").click(function () {
        var isValid = true;
        $("#errValid-StartDate").text("");
        $("#errValid-EndDate").text("");
        $("#errValid-StartTime").text("");
        $("#errValid-EndTime").text("");
        $("#errVerify-endDate").hide();
        $("#errVerify-EndTime").hide();
        $("#errValid-Status").text("");

        if ($("#startDate").val() == "") {
            $("#errValid-StartDate").text("Start Date field is required");
            isValid = false;
        }

        if ($("#endDate").val() == "") {
            $("#errValid-EndDate").text("End Date field is required");
            isValid = false;
        }

        if ($("#status option:selected").val() == 0) {
            $("#errValid-Status").text("Status field is required");
            isValid = false;
        }

        var employeeId = $("#EmployeeId").val();
        var startTime = $("#startDate").val();
        var endDate = $("#endDate").val();
        var startTimes = $("#StartTime").val();
        var endTime = $("#EndTime").val();
        var status = $("#status").val();
        var validStatus = status == 1 ? 0 : 1;

        //time format
        if (startTimes && endTime != null) {
            var time = $("#StartTime").val();
            var hours = Number(time.match(/^(\d+)/)[1]);
            var minutes = Number(time.match(/:(\d+)/)[1]);
            var AMPM = time.match(/\s(.*)$/)[1];
            if (AMPM == "PM" && hours < 12) hours = hours + 12;
            if (AMPM == "AM" && hours == 12) hours = hours - 12;
            var sHours = hours.toString();
            var sMinutes = minutes.toString();
            if (hours < 10) sHours = "0" + sHours;
            if (minutes < 10) sMinutes = "0" + sMinutes;
            var timeform = sHours + ":" + sMinutes + ":" + "00";

            var time1 = $("#EndTime").val();
            var hours1 = Number(time1.match(/^(\d+)/)[1]);
            var minutes1 = Number(time1.match(/:(\d+)/)[1]);
            var AMPM = time1.match(/\s(.*)$/)[1];
            if (AMPM == "PM" && hours1 < 12) hours1 = hours1 + 12;
            if (AMPM == "AM" && hours1 == 12) hours1 = hours1 - 12;
            var sHours1 = hours1.toString();
            var sMinutes1 = minutes1.toString();
            if (hours1 < 10) sHours1 = "0" + sHours1;
            if (minutes1 < 10) sMinutes1 = "0" + sMinutes1;
            var timeto = sHours1 + ":" + sMinutes1 + ":" + "00";

            if (timeto < timeform) {
                $("#errVerify-EndTime").show();
            }
