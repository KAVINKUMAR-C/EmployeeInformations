                        }
                        else {
                            swal.fire({
                                title: "No Record Found!",
                                icon: "error",
                                allowOutsideClick: false
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    $("#successEmailSending_Msg_Popup").modal('hide');
                                };
                            });
                        }

                    },
                    complete: function () {
                        $('.loader').addClass('d-none');
                    }
                });
