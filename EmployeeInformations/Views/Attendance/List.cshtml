    //----------------------------------------------------------------------------------------------------------------------------------------------------------

    // Download data 

    $('#DownloadEmployeeAttendance').click(function () {
        var formData = new FormData();
        var isValid = true;
        $("#errValid-StartDate").text("");
        $("#errValid-EndDate").text("");
        $("#errVerify-endDate").hide();
        $("#errValid-Status").text("");
