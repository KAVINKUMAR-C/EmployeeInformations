                                    if (value.status == true)
                                    {
                                    tableHeadHtml += "<a href='javascript: void (0)'' class='viewEmployee' data-empid=" + value.employeeId + "><span class='text-danger'>" + value.employeeName + "</span></a>";
                                    }
                                    else
