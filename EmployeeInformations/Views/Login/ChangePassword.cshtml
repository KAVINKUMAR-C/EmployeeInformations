                                        <span id="errVerifyEmployeeIsActiveCheck-OfficeEmail" style="display:none;" class="error text-danger">  Not able to change first time login ! </span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-lg btn-primary btn-block" id="emailsending">Send Reset Link</button>
                                </div>

                                <div class="form-note-s2 text-center pt-4">
                                    <a href="Login/Login"><strong>Return to login</strong></a>
                                </div>
                            </div>
