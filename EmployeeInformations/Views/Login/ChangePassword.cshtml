<div class="modal" id="successEmailSending_Msg_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content p-3 text-center">

            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">
                <h4 class="nk-modal-title"> Email Sent Successfully Please Check Your Email For Resetting The Password!</h4> 
            </div>

            <!-- Modal footer -->
            <div class="text-center" id="btnCloseChangePassword">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

<script>

    $("#OfficeEmail").keyup(function () {
        var isValid = true;

        $("#errValid-officeemail").text("");
        $("#errVerifyEmailFormat-OfficeEmail").hide();
        $("#errValid-errValid-officeemail").text("");
        if ($("#OfficeEmail").val() == "") {
            $("#errValid-officeemail").text("OfficeEmail field is required");
            isValid = false;
        }
    });

    // Mail Sent

    $("#emailsending").click(function () {
        var formData = new FormData();

        $("#errValid-errValid-officeemail").text("");

        var isValid = true;

        $("#errValid-officeemail").text("");
        $("#errVerifyEmailFormat-OfficeEmail").hide();
        $("#errVerifyEmployeeIsActiveCheck-OfficeEmail").hide();

        if ($("#OfficeEmail").val() == "") {
            $("#errValid-officeemail").text("OfficeEmail field is required");
            isValid = false;
        }

        var officeEmail = $("#OfficeEmail").val();
        formData.append("OfficeEmail", officeEmail);

        if (isValid) {
            var isEmailVerify = emailVerifyCheck(officeEmail);
            if (isEmailVerify) {
                $.ajax({
                    type: "POST",
                    url: "/Login/EmployeeIsActiveCheck",
                    contentType: false,
                    processData: false,
                    data: formData,
                    beforeSend: function () {
                        $('.loader').removeClass('d-none');
                    },
                    success: function (result) {
                        if (result == true) {
                            $.ajax({
                                type: "POST",
                                url: "/Login/ChangePassword",
                                contentType: false,
                                processData: false,
                                data: formData,
                                beforeSend: function () {
                                    $('.loader').removeClass('d-none');
                                },
                                success: function (result) {
                                    $("#successEmailSending_Msg_Popup").modal('show');
                                    $("#btnCloseChangePassword").click(function () {
                                      //  $("#successEmailSending_Msg_Popup").hide();
                                        window.location.href = "/Login/Login";
                                        $("#OfficeEmail").val("");
                                    });                                                                                                                                              
                                },
                                complete: function () {
                                    $('.loader').addClass('d-none');
                                }
                            });
                        }
                        else {
                            $('.loader').addClass('d-none');
                            $("#errVerifyEmployeeIsActiveCheck-OfficeEmail").show();
                            return false;
                        }
                    },
                    complete: function () {
                       // $('.loader').addClass('d-none');
                    }
                });
            }
            else {
                $('.loader').addClass('d-none');
                $("#errVerifyEmailFormat-OfficeEmail").show();
                return false;
            }

        }
        else {
            return false;
        }

    })
    //-----------------------------------------------------------------------------------------------------------------------------------

    // Email Validation

    function emailVerifyCheck(officeEmail) {
        var isEmailValid = true;
        var mailformat = /^([\w-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;
        $("#errVerifyEmailFormat-OfficeEmail").hide();
        if (!mailformat.test(officeEmail)) {
            $("#errVerifyEmailFormat-OfficeEmail").show();
            isEmailValid = false;
        }
        return isEmailValid
    }


    $(document).ready(function () {
        $('#successEmailSending_Msg_Popup').modal({
            backdrop: 'static',
            keyboard: false
        })     
    });
</script>


