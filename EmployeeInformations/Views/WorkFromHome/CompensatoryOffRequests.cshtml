                    {
                        data: 'employeeId',
                        render: function (data, type, row) {
                            return "<b class='tb-sub text-primary'>" + row.employeeUserName + "</b> ";
                        }
                    },
                    {
                        data: 'workedDate',
                        render: function (data, type, row) {
                            return "<span>" + dateFormat(row.workedDate) + "</span> ";
                        }
                    },
                    {
                        data: 'remark',
                        render: function (data, type, row) {
                            return "<div class='leave-reason'><p" + (row.remark ? " type='button' class='tb-sub font-weight-bold' data-bs-toggle='tooltip' data-bs-placement='bottom' title='" + row.remark + "'" : "") + ">" + row.remark + "</p></div>";
                         
                        }
                    },

                    {
                        data: 'dayCount',
                        render: function (data, type, row) {
                            return "<b class='tb-sub text-info'>" + row.dayCount + "</b> ";
                        }
                    },
                    {
                        data: 'reason',
                        render: function (data, type, row) {
                            return "<div class='leave-reason'><p" + (row.reason ? " type='button' class='tb-sub font-weight-bold' data-bs-toggle='tooltip' data-bs-placement='bottom' title='" + row.reason.replace(/'/g, "").trim() + "'" : "") + ">" + (row.reason || "") + "</p></div>";
                        }
                    },
                    {
                        data: 'status',
                        render: function (data, type, row) {
                            var leaveisApproved = "";
                            if (row.isApproved == 1) {
                                leaveisApproved = "bg-success";
                            }
                            else if (row.isApproved == 0) {
                                leaveisApproved = "bg-warning";
                            }
                            else if (row.isApproved == 2) {
                                leaveisApproved = "bg-danger";
                            }
                            return "<b class='badge badge-sm badge-dot has-bg " + leaveisApproved + " d-sm-inline-flex'>" + row.approvalStatus + "</b>";
                        }
                    },
                    {
                        data: 'null',
                        "orderable": false,
                        render: function (data, type, row) {

                            var results = "<div class='nk-tb-col nk-tb-col-tools py-0 border-0'><ul class='nk-tb-actions gx-1 my-n1'><li class='me-n1'> <div class='dropdown'><a href='#' class='dropdown-toggle btn btn-icon btn-trigger' data-bs-toggle='dropdown'><em class='icon ni ni-more-h'></em></a><div class='dropdown-menu dropdown-menu-end' > <ul class='link-list-opt no-bdr' > <li><a href='javascript:void(0)' id = 'btnViewLeaveDetail' data-empid=" + row.empId + " data-id=" + row.compensatoryId + " data-empname=" + row.employeename + "><em class='icon ni ni-eye'></em><span>View</span></a></li>";
                            if (@loginRoleId == 1 || @loginRoleId == 2) {

                                if (row.isApproved == 0) {

                                    results += "<li><a href='javascript:void(0)' id ='btnLeaveApproved' data-empid=" + row.empId + " data-id=" + row.compensatoryId + " data-empname=" + row.employeeName + " > <em class='icon ni ni-check' ></em><span>Approve</span ></a></li><li><a href='javascript:void(0)' id = 'rejectLeaveBtn' data-empid=" + row.empId + " data-id=" + row.compensatoryId + " data-empname=" + row.employeeName + "><em class='icon ni ni-cross'></em><span>Reject</span></a></li>";

                                }
                            }
                            else {
                                if (row.empId == @loginEmpId) {
                                    if (row.isApproved == 0) {

                                        if (row.empId == @loginEmpId) {
                                            results += "<div class='dropdown-menu dropdown-menu-end'> <ul class='link-list-opt no-bdr' ><li><a href='javascript:void(0)' id='btnViewLeaveDetail' data-empid=" + row.empId + " data-id=" + row.compensatoryId + " data-empname=" + row.employeeName + " ><em class='icon ni ni-eye'></em><span>View</span ></a></li><li><a href='javascript: void (0)' class='editLeaveBtn' data-id=" + row.compensatoryId + " data-remark=" + row.remark + " data-isconfirm=" + row.isApproved + " data-workeddate=" + dateFormat(row.workedDate) + "><em class='icon ni ni-edit'></em><span>Edit</span></a></li>";
                                        }
                                    }
                                    else {
                                        results += "<div class='dropdown-menu dropdown-menu-end'><ul class='link-list-opt no-bdr'><li><a href='javascript:void(0)' id = 'btnViewLeaveDetai' data-empid=" + row.empId + " data-id=" + row.compensatoryId + " data-empname=" + row.employeeName + "><em class='icon ni ni-eye'></em><span>View</span></a></li>";

                                    }
                                }
                                else {
                                    if (row.isApproved == 0) {
                                        results += "<li><a href='javascript:void(0)' id ='btnViewLeaveDetail' data-empid=" + row.empId + " data-id=" + row.compensatoryId + " data-empname=" + row.employeeName + "><em class='icon ni ni-eye'></em><span>View</span></a></li> <li><a href='javascript: void (0)' id = 'btnLeaveApproved' data-empid=" + row.empId + " data-id=" + row.compensatoryId + " data-empname=" + row.employeeName + "><em class='icon ni ni-check'></em><span>Approve</span></a></li><li><a href='javascript: void (0' id = 'rejectLeaveBtn' data-empid=" + row.empId + " data-id=" + row.compensatoryId + " data-empname=" + row.employeeName + "><em class='icon ni ni-cross'></em><span>Reject</span></a></li>";

                                    }
                                    else {
                                        results += " <li><a href='javascript: void (0)' id='btnViewLeaveDetail' data-empid=" + row.empId + " data-id=" + row.compensatoryId + " data-empname=" + row.employeeName + "><em class='icon ni ni-eye'></em><span>View</span></a></li>";
                                    }

                                }

                            }
                            results += "</ul></div></div>";
                            return results;

                        },
                    }
                ],
                "columnDefs": [
                    
                    { "width": "300px", "targets": [0, 1, 2, 3, 4, 5, 6] },
                ],
            
                "createdRow": function (row, data, dataIndex, settings) {
                    // Add custom class to the row
                    $(row).addClass('nk-tb-item');
                    // Add custom classes to each cell in the row if necessary
                    $(row).find('td').addClass('nk-tb-col tb-col');
                },
                "initComplete": function (settings, json) {
                    // Access recordsTotal and recordFiltered
                    var recordsTotal = json.recordsTotal;
                    var recordFiltered = json.recordFiltered;
                    console.log("Total records: " + recordsTotal);
                    console.log("Filtered records: " + recordFiltered);
                }
            });

            function getClassNameForGrid(input) {
                var className = "";

                switch (input) {
                    case 1:
                        className = "bg-success";
                        break;
                    case 2:
                        className = "bg-warning";
                        break;
                    case 3:
                        className = "bg-info";
                        break;
                    case 4:
                        className = "bg-blue";
                        break;
                    case 5:
                        className = "bg-pink";
                        break;
                    case 6:
                        className = "bg-danger";
                        break;
                }
                return className;
            }
        }
        
        // $('[data-bs-toggle="tooltip"]').tooltip();
        $("body").tooltip({ selector: '[data-bs-toggle=tooltip]' });

        $(document).on('click', '.sorting, .sorting_asc, .sorting_desc', function (e) {
            var target = e.target;
            var parent = target.parentNode;
            var index = [].indexOf.call(parent.children, target);

            if ($(this).hasClass('sorting_asc')) {
                columnDirection = 'desc';
            }
            else {
                columnDirection = 'asc'; // Assuming default sorting direction is descending
            }

            columnIndex = $(this).data('id');
        });
    });

    $(document).ready(function () {
        $("#leaveFromDate").change(function () {

            $("#errValid-LeaveFromDate").text("");
            if ($("#leaveFromDate").val() == "") {
                $("#errValid-LeaveFromDate").text("Worked Date field is required");
            }
            else {
                $("#errValid-LeaveFromDate").text("");
            }
        });

        $("#leaveFromDatedatepicker").datepicker({
            autoclose: true,
            todayHighlight: true,
            endDate: "today",
        });

        $("#LeaveFromDatedatepicker").datepicker({
            autoclose: true,
            todayHighlight: true,
            endDate: "today",
        });


        $("#CreateLeaveType").click(function () {
            $("#Create_Popup").modal('show');
        });
    })

    $("#Remark").keyup(function () {
        
        var isValid = true;
        $("#errValid-Remark").text("");
        if ($("#Remark").val() == "") {
            $("#errValid-Remark").text("Remark field is required");
            isValid = false;
        }
    });
    

    $("#btnCancelCreate").click(function () {


        $("#leaveFromDate").val("");
        $("#Remark").val("");
        $("#errValid-LeaveFromDate").text("");
        $("#errValid-Remark").text("");
        $("#Create_Popup").modal('hide');
    });

    $("#btnCancel").click(function () {
        $("#success_Leave_Popup").modal('hide');
    });

    $('#getLeaveData').on('click', '#viewEmployee', function () {
        var empId = $(this).data('empid');
        window.location.href = "/Employees/ViewEmployee?empId=" + empId;
    });

    $('#getLeaveData').on('click', '.editLeaveBtn', function () {

        $("#success_Leave_Popup").modal('show');
        var id = $(this).data(id)
        $("#CompensatoryId").val(id.id);
        $("#remark").text(id.remark);
        $("#LeaveFromDate").val(id.workeddate)
        $('#success_Leave_Popup').on('click', '#btnCreateLeave', function () {

            var formData = new FormData();
            var isValid = true;

            $("#errValid-Remark").text("");
            $("#errValid-LeaveFromDate").text("");

            if ($("#remark").val() == "") {
                $("#errValid-Remark").text("Remark field is required");
                isValid = false;
            }

            if ($("#LeaveFromDate").val() == "") {
                $("#errValid-LeaveFromDate").text("Worked Date field is required");
                isValid = false;
            }

            var empId = $("#EmpId").val();
            var compensatoryId = $("#CompensatoryId").val();
            var remark = $("#remark").val();
            var leaveFromDate = $("#LeaveFromDate").val();
            formData.append("CompensatoryId", compensatoryId);
            formData.append("EmpId", empId);
            formData.append("Remark", remark);
            formData.append("StrWorkedDate", leaveFromDate);

            if (isValid) {
                $.ajax({
                    type: "POST",
                    url: "/WorkFromHome/CreateCompensatoryRequest",
                    data: formData,
                    contentType: false,
                    processData: false,
                    beforeSend: function () {
                        $('.loader').removeClass('d-none');
                    },
                    success: (Result) => {
                        if (Result == true) {
                            $("#success_Leave_Popup").modal("hide");
                            swal.fire({
                                title: "Applied successfully",
                                text: "",
                                icon: "success",
                                allowOutsideClick: false  // This prevents closing on outside click
                            }).then((resultValue) => {
                                if (resultValue.isConfirmed) {

                                    var urlToRedirect = '@Url.Action("CompensatoryOffRequests", "WorkFromHome")';
                                    window.location.href = urlToRedirect;
                                };
                            });
                            $("#CompensatoryId").val('');
                            $("#EmpId").val('');
                            $("#remark").text('');
                            $("#LeaveFromDate").val('');

                        }
                        else {
                            swal.fire({
                                title: "Something error",
                                text: "",
                                icon: "error",
                                allowOutsideClick: false  // This prevents closing on outside click
                            }).then((resultValue) => {
                                window.location.href = "/WorkFromHome/CompensatoryOffRequests";
                            });

                        }
                        // $("#btnCloseLeave").css('display', 'none !important');

                        $('.loader').addClass('d-none');
                    },

                    error: (Result) => {
                        $('.loader').addClass('d-none');
                    }
                });

            }
            else {

                return false;
            }

        });
    });
    function dateFormat(startDate) {

        var dateObject = new Date(startDate);
        var day = ("0" + dateObject.getDate()).slice(-2);
        var month = ("0" + (dateObject.getMonth() + 1)).slice(-2);
        var year = dateObject.getFullYear();
        var formattedDate = day + "/" + month + "/" + year;
        return formattedDate;
    }

    $('#getLeaveData').on('click', '#btnViewLeaveDetail', function () {
        var id = $(this).data('id');
        PageUtil.goToContent("/WorkFromHome/ViewEmployeeCompensatotyOff?CompensatoryId=" + id);
    });

    $('#getLeaveData').on('click', '#btnLeaveDelete', function () {
        Swal.fire({
            title: 'Are you sure want to delete?',
            // text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#1ee0ac',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes',
            cancelButtonText: 'No',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                var id = $(this).data("id")
                var empid = $(this).data("empid")
                var leave = {
                    CompensatoryId: id,
                    empId: empid
                };
                $('.loader').removeClass('d-none');
                $.ajax({
                    type: "POST",
                    url: "/WorkFromHome/DeleteWorkFromHome",
                    data: leave,
                    success: (Result) => {

                        if (Result = "Success") {
