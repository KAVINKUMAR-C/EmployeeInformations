@using EmployeeInformations.Model.LeaveSummaryViewModel;
@using Microsoft.AspNetCore.Http;
@using EmployeeInformations.Common.Enums;
@model ViewCompensatoryOffRequest

<div class="leave-dtl-block">
    <div class="nk-block-head nk-block-head-sm">
        <div class="nk-block-between">
            <div class="nk-block-head-content">
                <h3 class="nk-block-title page-title">View Compensatory Off Request</h3>
            </div><!-- .nk-block-head-content -->
            <div class="d-flex mb-1">
                @Html.ActionLink("Back","CompensatoryOffRequests","WorkFromHome", null, new { @class = "btn btn-secondary ml-auto mt-auto mb-auto mr-2" })
            </div>
        </div><!-- .nk-block-between -->
    </div>

    <div class="card card-bordered card-preview view-block">
        <div class="card-inner">
            <form>

                <div class="row">
                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Employee Name</label>
                            <label class="view-text">@Model.EmployeeName</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Employee UserName</label>
                            <label class="view-text">@Model.EmployeeUserName</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Worked Date</label>
                            <label class="view-text">@Model.WorkedDate</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Remark</label>
                            <label class="view-text">@Model.Remark</label>
                        </div>
                    </div>

                    @if(Model.Reason != "")
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="form-group">
                                <label class="form-label w-100">Reason</label>
                                <label class="view-text">@Model.Reason</label>
                            </div>
                        </div>
                    }
                   
                    @if(Model.DayCount > 0)
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="form-group">
                                <label class="form-label w-100">Day Count</label>
                                <label class="view-text">@Model.DayCount</label>
                            </div>
                        </div>
                    }

                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Status</label>
                            @if (Model.IsApproved == 0)
                            {
                                <label class="view-text">Pending</label>
                            }
                            else if (Model.IsApproved == 1)
                            {
                                <label class="view-text">Approved</label>
                            }
                            else if (Model.IsApproved == 2)
                            {
                                <label class="view-text">Rejected</label>
                            }
                        </div>
                    </div>
                
                </div>
            </form>
        </div>
    </div>
</div>