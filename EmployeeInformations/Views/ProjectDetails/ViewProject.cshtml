@using EmployeeInformations.Common
@using EmployeeInformations.Model.ProjectSummaryViewModel;
@using Microsoft.AspNetCore.Http;
@using EmployeeInformations.Common.Enums;
@model ViewProjectDetails

<div class="leave-dtl-block">
<div class="nk-block-head nk-block-head-sm">
    <div class="nk-block-between">
        <div class="nk-block-head-content">
            <h3 class="nk-block-title page-title">View Project</h3>
        </div><!-- .nk-block-head-content -->
        <div class="d-flex mb-1">
            @Html.ActionLink("Back","Project","ProjectDetails", null, new { @class = "btn btn-secondary ml-auto mt-auto mb-auto mr-2" })
        </div>
    </div><!-- .nk-block-between -->
</div>

<div class="card card-bordered card-preview view-block">
    <div class="card-inner">
        <form>           
            <div class="row">
                @if (@Model.ProjectTypeName == "Fixed bid")
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Client Company</label>
                            <label class="view-text">@Model.ClientCompanyName</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Name</label>
                            <label class="view-text">@Model.ProjectName</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Project Type</label>
                            <label class="view-text">@Model.ProjectTypeName</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Technology</label>
                            <label class="view-text">@Model.Technology</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Hours</label>
                            <label class="view-text">@Model.Hours</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Start Date</label>
                            <label class="view-text">@Model.Startdate.ToString(Constant.DateFormat)</label>
                        </div>
                    </div>


                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">End Date</label>
                            <label class="view-text">@Model.Enddate.ToString(Constant.DateFormat)</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Currency Code</label>
                            <label class="view-text">@Model.CurrencyCode</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Project Cost</label>
                            <label class="view-text">@Model.ProjectCost</label>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-label w-100"> Description</label>
                            <label class="view-text">@Model.ProjectDescription</label>
                        </div>
                    </div>

                }
                else if (@Model.ProjectTypeName == "Retainer" || @Model.ProjectTypeName == "Internal")
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Client Company</label>
                            <label class="view-text">@Model.ClientCompanyName</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Name</label>
                            <label class="view-text">@Model.ProjectName</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Project Type</label>
                            <label class="view-text">@Model.ProjectTypeName</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Technology</label>
                            <label class="view-text">@Model.Technology</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="form-group">
                            <label class="form-label w-100">Start Date</label>
                            <label class="view-text">@Model.Startdate.ToString(Constant.DateFormat)</label>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-label w-100"> Description</label>
                            <label class="view-text">@Model.ProjectDescription</label>
                        </div>
                    </div>

                }
                else{
                        <div class="col-lg-4 col-md-6">
                            <div class="form-group">
                                <label class="form-label w-100">Client Company</label>
                                <label class="view-text">@Model.ClientCompanyName</label>
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-6">
                            <div class="form-group">
                                <label class="form-label w-100">Name</label>
                                <label class="view-text">@Model.ProjectName</label>
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-6">
                            <div class="form-group">
                                <label class="form-label w-100">Project Type</label>
                                <label class="view-text">@Model.ProjectTypeName</label>
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-6">
                            <div class="form-group">
                                <label class="form-label w-100">Technology</label>
                                <label class="view-text">@Model.Technology</label>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-label w-100"> Description</label>
                                <label class="view-text">@Model.ProjectDescription</label>
                            </div>
                        </div>
                    }

            </div>
        </form>
    </div>
</div>
</div>

