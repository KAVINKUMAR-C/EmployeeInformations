                                    };
                                });
                                
                            } else {
                                swal.fire({
                                    title: "Something error",
                                    text: "",
                                    icon: "error",
                                    allowOutsideClick: false  // This prevents closing on outside click
                                }).then((resultValue) => {
                                    window.location.href = "/ProjectDetails/Project";
                                });
                                
                            }                           
                        },
                        complete: function () {
                            $('.loader').addClass('d-none');
                        }
                    });
                }
                else {
                    $('.loader').addClass('d-none');
                    $("#errVerify-Enddate").show();
                    return false;
                }
            }
            else
            {
                var url = "/ProjectDetails/AddProject";

                $.ajax({
                    type: "POST",
                    url: url,
                    data: formData,
                    contentType: false,
                    processData: false,
                    beforeSend: function () {
