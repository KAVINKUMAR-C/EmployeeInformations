    // Create

    $("#btnCreate").click(function () {

        var formData = new FormData();
        var isValid = true;

        $("#errVerify-SkillExist").hide();
        $("#errVerify-Skills").hide();
        var formData = new FormData();

        if ($("#newSkills").val() == "") {
            $("#errVerify-Skills").show();
            isValid = false;
        }

        var skill = $("#newSkills").val();
        var isDeleted = false;

        formData.append("SkillName", skill);
        formData.append("IsDeleted", isDeleted);

        if (isValid) {


            $.ajax({
                type: "POST",
                url: "/WebsiteJob/GetSkillCount",
                contentType: false,
                processData: false,
                data: formData,
                beforeSend: function () {
                    $('.loader').removeClass('d-none');
                },
                success: function (result) {

                    if (result == 0) {

                        $.ajax({
                            type: "POST",
                            url: "/WebsiteJob/CreateSkills",
                            data: formData,
                            contentType: false,
                            processData: false,
                            beforeSend: function () {
                                $('.loader').removeClass('d-none');
                            },
                            success: (Result) => {
                                if (Result) {
                                    $("#success_Skill_Popup").hide();
                                    $("#success_CreateSkill_Popup").modal('show');
                                    $("#btnCloseSkill").click(function () {
                                        var urlToRedirect = '@Url.Action("WebsiteJobPost", "WebsiteJob")';
                                        window.location.href = urlToRedirect;
                                    });
                                }
                                else { alert("Failed") }
                                $('.loader').addClass('d-none');
                            },
                            error: (result) => {
                                $('.loader').addClass('d-none');
                            }
                        });
                    }
                    else {
                        $("#errVerify-SkillExist").show();
                        return false;
                    }
                },
                complete: function () {
                    $('.loader').addClass('d-none');
                }
            });

        }
        else {
            $("#errVerify-Skills").show();
            return false;
        }


    });
