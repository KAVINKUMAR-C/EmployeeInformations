    // Status Change

    $(document).on('click', '.btnChangeStatus', function () {
        var jobId = $(this).data("id");
        var status = $(this).data("statusid");
        $('.loader').removeClass('d-none');
        $.ajax({
            type: "POST",
            url: "/WebsiteJob/ChangeStatusWebsiteJobPost",
            data: { jobId: jobId, status: status },
            success: (Result) => {
                if (Result) {

                    if (status == 0) {
                        Swal.fire({
                            title: 'Post Deactivated Successfully',
                            text: "",
                            icon: 'success',
                            allowOutsideClick: false
                        }).then((result) => {
                            window.location.href = "/WebsiteJob/WebsiteJobPost";
                        });
                    }
                    else if (status == 2) {
                        Swal.fire({
                            title: 'Post Activated Successfully',
                            text: "",
                            icon: 'success',
