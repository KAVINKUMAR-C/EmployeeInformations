@using EmployeeInformations.Model.AssetViewModel;
@model AssetCategoryViewModal
@{
    ViewBag.Title = "Asset";
    Layout = "_Layout";
}

<div class="nk-block-head nk-block-head-sm">
    <div class="nk-block-between">
        <div class="nk-block-head-content">
            <h3 class="nk-block-title page-title">Asset Category</h3>
        </div><!-- .nk-block-head-content -->
        <div class="d-flex mb-1">
            <input type="button" class="btn btn-primary ml-auto mt-auto mb-auto btn-sm" id="CreateAsset" value="Create" />
        </div>
    </div><!-- .nk-block-between -->
</div>

<div class="card card-bordered card-preview">
    <div class="card-inner table-card">
        <table class="display employee-holiday-table mb-3 no-sorting" style="width:100%" data-auto-responsive="false" id="getAssetCategory">
            <thead>
                <tr class="nk-tb-item table-header">
                    <th class="nk-tb-col"><span class="sub-text">Name</span></th>
                    <th class="nk-tb-col"><span class="sub-text">Code</span></th>
                    <th class="nk-tb-col"><span class="sub-text">Status</span></th>
                    <th class="nk-tb-col tb-col"><span class="sub-text">Action</span></th>
                    @* <th class="nk-tb-col nk-tb-col-tools">
                    <div class="nk-tb-col py-0 border-0">
                    <ul class="nk-tb-actions gx-1 my-n1">
                    <li class="me-n1">
                    <div class="dropdown">
                    <a href="#" class="dropdown-toggle btn btn-icon btn-trigger" data-bs-toggle="dropdown"><em class="icon ni ni-more-h"></em></a>
                    </div>
                    </li>
                    </ul>
                    Action
                    </div>
                    </th>*@
                </tr>
            </thead>

            <tbody>
                @if (Model.AssetCategory.Count() > 0)
                {
                    @foreach (var item in Model.AssetCategory)
                    {
                        <tr class="nk-tb-item">
                            <td class="nk-tb-col tb-col">
                                <b class="tb-sub text-primary">@item.CategoryName</b>
                            </td>
                            <td class="nk-tb-col tb-col">
                                <b class="tb-sub text-primary">@item.CategoryCode</b>
                            </td>
                            @if (item.IsActive)
                            {
                                <td class="nk-tb-col tb-col">
                                    <b class="badge badge-dot bg-success">Active</b>
                                </td>
                            }
                            else
                            {
                                <td class="nk-tb-col tb-col">
                                    <b class="badge badge-dot bg-danger">In Active</b>
                                </td>
                            }
                            <td class="nk-tb-col tb-col">

                                <div class="nk-tb-col nk-tb-col-tools py-0 border-0">
                                    <ul class="nk-tb-actions gx-1 my-n1">
                                        <li class="me-n1">
                                            <div class="dropdown">
                                                <a href="#" class="dropdown-toggle btn btn-icon btn-trigger" data-bs-toggle="dropdown"><em class="icon ni ni-more-h"></em></a>
                                                <div class="dropdown-menu dropdown-menu-end">
                                                    <ul class="link-list-opt no-bdr">
                                                        <li><a href="javascript:void(0)" class="btnUpdate" data-id="@item.CategoryId" data-categoryname="@item.CategoryName" data-isactive="@item.IsActive"><em class="icon ni ni-edit"></em><span>Status</span></a></li>
                                                        <li><a href="javascript:void(0)" class="btnEdit" data-id="@item.CategoryId" data-categoryname="@item.CategoryName" data-categorycode="@item.CategoryCode" data-isactive="@item.IsActive"><em class="icon ni ni-edit"></em><span>Edit</span></a></li>
                                                        <li><a href="javascript:void(0)" id="btnDelete" data-id="@item.CategoryId"><em class="icon ni ni-delete"></em><span>Delete</span></a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </td>

                        </tr>
                        <!-- .nk-tb-item  -->
                    }
                }
            </tbody>
        </table>
    </div>
</div>


<div class="modal" id="Create_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Category</h5>
            </div>
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">
                <div>
                    <div class="col-12">
                        <div class="form-group">
                            <label class="form-label">Name<span class="required" style="color: #FF0000">*</span></label>
                            <input type="text" class="form-control" id="CategoryName" />
                            @Html.ValidationMessageFor(m => m.CategoryName,"",new{@class="error text-danger",id="errValid-CategoryName"})
                            <span id="errVerify-CategoryName" style="display:none;" class="error text-danger">Name already exists! </span>
                        </div>
                        <span class="error text-danger" id="errValid-CategoryName"></span>
                    </div>
                </div>
                <div>
                    <div class="col-12">
                        <div class="form-group">
                            <label class="form-label">Code<span class="required" style="color: #FF0000">*</span></label>
                            <input type="text" class="form-control" id="CategoryCode" />
                            @Html.ValidationMessageFor(m => m.CategoryCode,"",new{@class="error text-danger",id="errValid-CategoryCode"})
                            <span id="errVerify-CategoryCode" style="display:none;" class="error text-danger">Code already exists! </span>
                        </div>
                        <span class="error text-danger" id="errValid-CategoryCode"></span>
                    </div>
                </div>
                <div class="col-lg-12 d-flex mt-3 p-0">
                    <input type="button" class="btn btn-primary ml-auto mr-3" id="btnCreate" value="Save" />
                    <input type="button" class="btn btn-danger" id="btnCloseAssetCategory" value="Cancel" />
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="success_DeleteAssetCategory_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content p-3 text-center">
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">
                <h4 class="nk-modal-title">Deleted Successfully!</h4>
            </div>

            <!-- Modal footer -->
            <div class="text-center" id="btnCloseDeleteAssetCategory">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>

    </div>
</div>

<div class="modal" id="success_AssetCategory_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Status</h5>
            </div>
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">
                <div>
                    <div class="col-12 d-flex mb-2">
                        <label class="form-label my-auto">Category Name</label>
                        <div class="form-group m-0">
                            <lable class="badge badge-sm bg-outline-primary ml-2" id="AssetCategory"> </lable>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <div class="custom-control custom-control-sm custom-checkbox">
                            <input type="checkbox" name="chkIsActive" class="custom-control-input chkIsActive" id="chkIsActive">
                            <label class="custom-control-label" for="chkIsActive">Status</label>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 d-flex mt-3 p-0">
                    <input type="button" class="btn btn-primary ml-auto mr-3" id="btnCreateAssetCategory" value="Save" />
                    <input type="button" class="btn btn-danger" id="btnClose" value="Cancel" />
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal" id="success_AssetCategoryCode_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Category</h5>
            </div>
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">
                <div>
                    <div class="col-12">
                        <div class="form-group">
                            <label class="form-label">Name<span class="required" style="color: #FF0000">*</span></label>
                            <input type="text" class="form-control" id="AssetCategoryName" />
                            <span class="error text-danger" id="errMsg-CategoryName"></span>
                        </div>

                    </div>
                </div>
                <div>
                    <div class="col-12">
                        <label class="form-label">Code</label>
                        <div class="form-group">
                            <input type="text" class="form-control" id="AssetCategoryCodes" disabled />
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 d-flex mt-3 p-0">
                    <input type="button" class="btn btn-primary ml-auto mr-3" id="btnCreateCategoryCode" value="Save" />
                    <input type="button" class="btn btn-danger" id="btnCancel" value="Cancel" />
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">

    $(document).ready(function () {
        $('#getAssetCategory').DataTable({
            "bInfo": true,
            "paging": true
        });
    });

    $(document).ready(function () {
        $("#CreateAsset").click(function () {
            $("#Create_Popup").modal('show');
        });
    });

    $("#btnCloseAssetCategory").click(function () {
        $("#Create_Popup").hide();       
        var urlToRedirect = '@Url.Action("Asset","Asset")';
        window.location.href = urlToRedirect;
    });

    // keyup summary

    $("#CategoryName").keyup(function () {
        var isValid = true;
        $("#errValid-CategoryName").text("");
        $("#errVerify-CategoryName").hide();

        if ($("#CategoryName").val() == "") {
            $("#errValid-CategoryName").text("Name field is required");
            isValid = false;
        }
    });

    $("#AssetCategoryName").keyup(function () {
        $("#errMsg-CategoryName").text("");
        $("#errVerify-CategoryName").hide();

        if ($("#AssetCategoryName").val() == "") {
            $("#errMsg-CategoryName").text("Name field is required");
        }
    });

    $("#CategoryCode").keyup(function () {
        var isValid = true;
        $("#errValid-CategoryCode").text("");
        $("#errVerify-CategoryCode").hide();

        if ($("#CategoryCode").val() == "") {
            $("#errValid-CategoryCode").text("Code field is required");
            isValid = false;
        }
    });
    //----------------------------------------------------------------------------------------------------------------------------------------------------------------

    // Create asset

    $("#btnCreate").click(function () {

        var formData = new FormData();
        var isValid = true;
        $("#errValid-CategoryName").text("");
        $("#errVerify-CategoryName").hide();

        $("#errValid-CategoryCode").text("");
        $("#errVerify-CategoryCode").hide();

        if ($("#CategoryName").val() == "") {
            $("#errValid-CategoryName").text("Name field is required");
            isValid = false;
        }

        if ($("#CategoryCode").val() == "") {
            $("#errValid-CategoryCode").text("Code field is required");
            isValid = false;
        }

        var categoryName = $("#CategoryName").val();
        var categoryCode = $("#CategoryCode").val();

        formData.append("CategoryName", categoryName);
        formData.append("CategoryCode", categoryCode);
        
        if (isValid) {          
             var url = "/Asset/AddAssetCategory";
            $.ajax({
                type: "POST",
                url: url,
                data: formData,
                contentType: false,
                processData: false,
                beforeSend: function () {
                    $('.loader').removeClass('d-none');
                },
                success: function (Result) {
                    $("#Create_Popup").css('display', 'none !important');                    
                    if (Result.categoryNameCount == 1) {
                        $('.loader').addClass('d-none');
                        $("#errVerify-CategoryName").show();
                        return false;
                    }
                    else if (Result.categoryCodeCount == 1) {
                        $('.loader').addClass('d-none');
                        $("#errVerify-CategoryCode").show();
                        return false;
                    }
                    else {
                        if (Result.categoryId > 0) {                          
                            Swal.fire({
                                title: 'Added Successfully',
                                text: "",
                                icon: 'success',
                                allowOutsideClick: false
                            }).then((result) => {
                                window.location.href = "/Asset/Asset";
                            });
                        }
                        else {                        
                            Swal.fire({
                                title: 'Something error',
                                text: "",
                                icon: 'error',
                                allowOutsideClick: false
                            }).then((result) => {
                                window.location.href = "/Asset/Asset";
                            });
                        }
                    }
                },
                complete: function () {
                    $('.loader').addClass('d-none');
                }
            });
        }
        else {
           return false;
        }
    });

    //--------------------------------------------------------------------------------------------------------------------------------------------------------------

    // Delete asset

    $('#getAssetCategory').on('click', '#btnDelete', function () {
        Swal.fire({
            title: 'Are you sure want to delete?',
            // text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#1ee0ac',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes',
            cancelButtonText: 'No',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                var id = $(this).data("id")
                var assetCategory = {
                    CategoryId: id
                };

                $('.loader').removeClass('d-none');

                $.ajax({
                    type: "POST",
                    url: "/Asset/DeletedAssetCategory",
                    data: assetCategory,
                    success: (result) => {
                        if (result == true) {
                            Swal.fire({
                                title: 'Deleted Successfully!',
                                text: "",
                                icon: 'success',
                                allowOutsideClick: false
                            }).then((result) => {
                                window.location.href = "/Asset/Asset";
                            });
                        }
                        else {
                            Swal.fire({
                                title: 'Something error',
                                text: "",
                                icon: 'error',
                                allowOutsideClick: false
                            }).then((result) => {
                                window.location.href = "/Asset/Asset";
                            });
                        }
                        $('.loader').addClass('d-none');
                    },
                    error: (result) => {
                        $('.loader').addClass('d-none');
                    }

                });
            }
        });

    });
    //--------------------------------------------------------------------------------------------------------------------------------------------------------

    // Update asset category

    $('#getAssetCategory').on('click', '.btnUpdate', function () {

        $("#success_AssetCategory_Popup").modal('show');
        var categoryname = $(this).data("categoryname");
        var isactive = $(this).data("isactive");
        $("#AssetCategory").text(categoryname);
        isactive == 'True' ? $('.chkIsActive').prop('checked', true) : $('.chkIsActive').prop('checked', false);

        $("#categoryAction").val(isactive);
        var id = $(this).data("id");

        $('#success_AssetCategory_Popup').on('click', '#btnCreateAssetCategory', function () {


            var categoryAction = $('.chkIsActive').prop('checked');
            var category = {
                CategoryId: id,
                IsActive: categoryAction
            };
            $('.loader').removeClass('d-none');


            $.ajax({
                type: "POST",
                url: "/Asset/UpdateAssetCategory",
                data: category,
                success: (Result) => {
                    $("#success_AssetCategory_Popup").css('display', 'none !important');
                    if (Result > 0) {
                        Swal.fire({
                            title: 'Updated Successfully',
                            text: "",
                            icon: 'success',
                            allowOutsideClick: false
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = "/Asset/Asset";
                            };
                        });
                    }
                    else {
                        Swal.fire({
                            title: 'Something error',
                            text: "",
                            icon: 'error',
                            allowOutsideClick: false
                        }).then((result) => {
                                window.location.href = "/Asset/Asset";
                        });
                    }

                    $('.loader').addClass('d-none');
                },
                error: (Result) => {
                    $('.loader').addClass('d-none');
                }
            });

        });

    });
    //----------------------------------------------------------------------------------------------------------------------------------------------

    $("#btnClose").click(function () {
        $("#success_AssetCategory_Popup").hide();
        var urlToRedirect = '@Url.Action("Asset","Asset")';
        window.location.href = urlToRedirect;
    });

    $("#btnCancel").click(function () {
        $("#success_AssetCategory_Popup").hide();
        var urlToRedirect = '@Url.Action("Asset","Asset")';
        window.location.href = urlToRedirect;
    });

    // Edit asset category

    $('#getAssetCategory').on('click', '.btnEdit', function () {

        $("#success_AssetCategoryCode_Popup").modal('show');
        var categoryname = $(this).data("categoryname");
        var categorycode = $(this).data("categorycode");
        $("#AssetCategoryCode").text(categorycode);
        $("#AssetCategoryCodes").val(categorycode);
        $("#AssetCategoryName").val(categoryname);
        var isactive = $(this).data("isactive");
        var id = $(this).data("id");
        var CategoryName = $("#AssetCategoryName").val();
        var CategoryCode = $("#AssetCategoryCodes").val();
        $('#success_AssetCategoryCode_Popup').on('click', '#btnCreateCategoryCode', function () {
            var isValid = true;
            var categoryName = $("#AssetCategoryName").val();
            var category = {
                CategoryId: id,
                CategoryName: categoryName,
                CategoryCode: CategoryCode,
                IsActive: isactive
            };
            var asset = $("#AssetCategoryName").val();
            if (asset == "") {
                $("#errMsg-CategoryName").text("Category Name field is required");
                isValid = false;
            }
            $('.loader').removeClass('d-none');


            if (isValid) {
                $.ajax({
                    type: "POST",
                    url: "/Asset/UpdateCategory",
                    data: category,
                    success: (Result) => {
                        $("#success_AssetCategoryCode_Popup").css('display', 'none !important');
                        if (Result > 0) {
                            Swal.fire({
                                title: 'Updated Successfully',
                                text: "",
                                icon: 'success',
                                allowOutsideClick: false
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location.href = "/Asset/Asset";
                                };
                            });
                        }
                        else {
                            Swal.fire({
                                title: 'Something error',
                                text: "",
                                icon: 'error',
                                allowOutsideClick: false
                            }).then((result) => {
                                    window.location.href = "/Asset/Asset";
                            });
                        }

                        $('.loader').addClass('d-none');
                    },
                    error: (Result) => {
                        $('.loader').addClass('d-none');
                    }
                });
            }
            else {
                $('.loader').addClass('d-none');
                return false;
            }

        });

    });
    $(document).ready(function () {
        $('#success_AssetCategory_Popup').modal({
            backdrop: 'static',
            keyboard: false
        })
        $('#Create_Popup').modal({
            backdrop: 'static',
            keyboard: false
        })
        $('#success_AssetCategoryCode_Popup').modal({
            backdrop: 'static',
            keyboard: false
        })
    });

</script>                