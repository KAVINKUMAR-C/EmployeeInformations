@using EmployeeInformations.Model.AssetViewModel;
@model AssetTypeViewModal
@{
    ViewBag.Title = "Types";
    Layout = "_Layout";
}

<div class="nk-block-head nk-block-head-sm">
    <div class="nk-block-between">
        <div class="nk-block-head-content">
            <h3 class="nk-block-title page-title">Asset Types</h3>
        </div><!-- .nk-block-head-content -->
        <div class="d-flex mb-1">
            <input type="button" class="btn btn-primary ml-auto mt-auto mb-auto btn-sm" id="CreateAssetType" value="Create" />
        </div>
    </div><!-- .nk-block-between -->
</div>

<div class="card card-bordered card-preview">
    <div class="card-inner table-card">
        <table class="display employee-holiday-table mb-3 no-sorting" style="width:100%" data-auto-responsive="false" id="getAssetType">
            <thead>
                <tr class="nk-tb-item table-header">
                    <th class="nk-tb-col"><span class="sub-text">Category</span></th>
                    <th class="nk-tb-col"><span class="sub-text">Asset Type</span></th>
                    <th class="nk-tb-col"><span class="sub-text">Status</span></th>
                    <th class="nk-tb-col tb-col"><span class="sub-text">Action</span></th>
                    @*<th class="nk-tb-col nk-tb-col-tools">
                    <div class="nk-tb-col py-0 border-0">
                    <ul class="nk-tb-actions gx-1 my-n1">
                    <li class="me-n1">
                    <div class="dropdown">
                    <a href="#" class="dropdown-toggle btn btn-icon btn-trigger" data-bs-toggle="dropdown"><em class="icon ni ni-more-h"></em></a>
                    </div>
                    </li>
                    </ul>
                    Action
                    </div>
                    </th>*@
                </tr>
            </thead>

            <tbody>
                @if (Model.AssetTypes.Count() > 0)
                {
                    @foreach (var item in Model.AssetTypes)
                    {
                        <tr class="nk-tb-item">
                            <td class="nk-tb-col tb-col">
                                <span>@item.AssetCategoryName</span>
                            </td>
                            <td class="nk-tb-col tb-col">
                                <b class="tb-sub text-primary">@item.TypeName</b>
                            </td>
                            @if (item.IsActive)
                            {
                                <td class="nk-tb-col tb-col">
                                    <b class="badge badge-dot bg-success">Active</b>
                                </td>
                            }
                            else
                            {
                                <td class="nk-tb-col tb-col">
                                    <b class="badge badge-dot bg-danger">In Active</b>
                                </td>
                            }
                            <td class="nk-tb-col tb-col">

                                <div class="nk-tb-col nk-tb-col-tools py-0 border-0">
                                    <ul class="nk-tb-actions gx-1 my-n1">
                                        <li class="me-n1">
                                            <div class="dropdown">
                                                <a href="#" class="dropdown-toggle btn btn-icon btn-trigger" data-bs-toggle="dropdown"><em class="icon ni ni-more-h"></em></a>
                                                <div class="dropdown-menu dropdown-menu-end">
                                                    <ul class="link-list-opt no-bdr">
                                                        <li><a href="javascript:void(0)" class="btnUpdate" data-id="@item.Id" data-categoryname="@item.TypeName" data-isactive="@item.IsActive"><em class="icon ni ni-edit"></em><span>Status</span></a></li>
                                                        <li><a href="javascript:void(0)" class="btnEdit" data-id="@item.Id" data-categoryname="@item.TypeName" data-isactive="@item.IsActive" data-categoryid="@item.CategoryId"><em class="icon ni ni-edit"></em><span>Edit</span></a></li>
                                                        <li><a href="javascript:void(0)" id="btnDelete" data-id="@item.Id"><em class="icon ni ni-delete"></em><span>Delete</span></a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </td>

                        </tr>
                        <!-- .nk-tb-item  -->
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal" id="Create_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Asset Type</h5>
            </div>
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">
                <div class="col-12">
                    <div class="form-group">
                        <label class="form-label">Category<span class="required" style="color: #FF0000">*</span></label>
                        <div>
                            @Html.DropDownListFor(m =>m.CategoryId, new SelectList(Model.AssetCategoryName,"CategoryId","CategoryName"), "--Select Category--",new{@class="form-control",id="CategoryId"})
                        </div>
                        @Html.ValidationMessageFor(m => m.CategoryId,"",new{@class="error text-danger" , id="errValid-Id"})
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        <label class="form-label">Type<span class="required" style="color: #FF0000">*</span></label>
                        <input type="text" class="form-control" id="TypeName" />
                        @Html.ValidationMessageFor(m => m.TypeName,"",new{@class="error text-danger",id="errValid-TypeName"})
                        <span id="errVerify-TypeName" style="display:none;" class="error text-danger"> Type already exists! </span>
                    </div>
                    <span class="error text-danger" id="errValid-TypeName"></span>
                </div>

                <div class="col-lg-12 d-flex mt-3 p-0">
                    <input type="button" class="btn btn-primary ml-auto mr-3" id="btnCreate" value="Save" />
                    <input type="button" class="btn btn-danger" id="btnCloseAssetType" value="Cancel" />
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal" id="success_DeleteAssetType_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content p-3 text-center">
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">
                <h4 class="nk-modal-title"> Deleted Successfully!</h4>
            </div>

            <!-- Modal footer -->
            <div class="text-center" id="btnCloseDeleteAssetType">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>

    </div>
</div>

<div class="modal" id="Update_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Status</h5>
            </div>
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">

                <div>
                    <div class="col-12 d-flex mb-2">
                        <label class="form-label my-auto">Asset Type</label>
                        <div class="form-group m-0">
                            <label class="badge badge-sm bg-outline-primary ml-2" id="TypeNames"></label>
                        </div>
                    </div>

                </div>

                <div class="col-12">
                    <div class="form-group">
                        <div class="custom-control custom-control-sm custom-checkbox">
                            <input type="checkbox" name="chkIsActiveModule" class="custom-control-input chkIsActiveModule" id="chkIsActiveModule">
                            <label class="custom-control-label" for="chkIsActiveModule">Status</label>
                            <span class="error text-danger" id="errValid-TypeName"></span>
                        </div>
                    </div>

                </div>


                <div class="col-lg-12 d-flex mt-3 p-0">
                    <input type="button" class="btn btn-primary ml-auto mr-3" id="btnIsActive" value="Save" />
                    <input type="button" class="btn btn-danger" id="btnCloseUpdate" value="Cancel" />
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="Asstetype_Popup" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Asset Type</h5>
            </div>
            <!-- Modal body -->
            <div class="modal-body" id="txtSuccessMeg">

                <div>
                    <div class="col-12">
                        <label class="form-label">Category</label>
                        <div class="form-group">
                            @Html.DropDownListFor(m =>m.CategoryId, new SelectList(Model.AssetCategoryName,"CategoryId","CategoryName"), "--Select Category --",new{@class="form-control",id="AssetCategoryCodes",@disabled=true})
                            @*<input type="text" class="form-control" id="AssetCategoryCodes" disabled />*@
                        </div>
                    </div>
                </div>
                <div>
                    <div class="col-12">
                        <div class="form-group">
                            <label class="form-label">Type<span class="required" style="color: #FF0000">*</span></label>
                            <input type="text" class="form-control" id="AssetTypeName" />
                            <span class="error text-danger" id="errMsg-CategoryName"></span>
                        </div>
                    </div>
                </div>


                <div class="col-lg-12 d-flex mt-3 p-0">
                    <input type="button" class="btn btn-primary ml-auto mr-3" id="btnAsstetype" value="Save" />
                    <input type="button" class="btn btn-danger" id="btnCancel" value="Cancel" />
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        $('#getAssetType').DataTable({
            "bInfo": true,
            "paging": true
        });
    });

    $(document).ready(function () {
        $("#CreateAssetType").click(function () {
            $("#Create_Popup").modal('show');
        });

        // nice scroll
        $("#CategoryId").select2().on("select2:open", function () {
            $('.select2-results__options').niceScroll({
                cursorcolor: "#4e5e7a",
                cursorwidth: "5px",
                autohidemode: false,
                cursorborder: "1px solid #4e5e7a",
                horizrailenabled: false,
            });
        });
    });

    $("#btnCloseAssetType").click(function () {
        $("#Create_Popup").hide();
        var urlToRedirect = '@Url.Action("Types","Asset")';
        window.location.href = urlToRedirect;
    });

    $("#TypeName").keyup(function () {
        var isValid = true;
        $("#errValid-TypeName").text("");
        $("#errVerify-TypeName").hide();

        if ($("#TypeName").val() == "") {
            $("#errValid-TypeName").text("Type field is required");
            isValid = false;
        }
    });
    $("#AssetTypeName").keyup(function () {
        $("#errMsg-CategoryName").text("");
        if ($("#AssetTypeName").val() == "") {
            $("#errMsg-CategoryName").text("Type field is required");
        }
    });

    $("#CategoryId").change(function () {
        var isValid = true;
        $("#errValid-Id").text("");

        if ($("#CategoryId").val() == "") {
            $("#errValid-Id").text("Category field is required");
            isValid = false;
        }
    });
    //-------------------------------------------------------------------------------------------------------------------------------------------------------

    // Create asset type

    $("#btnCreate").click(function () {

        var isValid = true;
        var formData = new FormData();
        $("#errValid-TypeName").text("");
        $("#errVerify-TypeName").hide();
        $("#errValid-Id").text("");

        if ($("#CategoryId").val() == "") {
            $("#errValid-Id").text("Category field is required");
            isValid = false;
        }
        if ($("#TypeName").val() == "") {
            $("#errValid-TypeName").text("Type field is required");
            isValid = false;
        }

        var typeName = $("#TypeName").val();
        var id = $("#CategoryId").val();
        formData.append("TypeName", typeName);
        formData.append("CategoryId", id);
        

        if (isValid) {
            $.ajax({
                type: "POST",
                url: "/Asset/AddAssetType",
                contentType: false,
                processData: false,
                data: formData,
                beforeSend: function () {
                    $('.loader').removeClass('d-none');
                },
                success: (result) => {
                    $('.loader').addClass('d-none');
                    $("#Create_Popup").css('display', 'none !important');
                    if (result.typeNameCount == 1) {
                        $('.loader').addClass('d-none');
                        $("#errVerify-TypeName").show();
                        return false;
                    } else {
                        if (result.id > 0) {
                            Swal.fire({
                                title: 'Added Successfully',
                                text: "",
                                icon: 'success',
                                allowOutsideClick: false
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location.href = "/Asset/Types";
                                };
                            });
                        } else {
                            Swal.fire({
                                title: 'Something error',
                                text: "",
                                icon: 'error',
                                allowOutsideClick: false
                            }).then((result) => {                               
                                    window.location.href = "/Asset/Types";
                            });                          
                        }
                    }
                },
                complete: function () {
                    // $('.loader').addClass('d-none');
                }
            });
        }
        else {
            return false;
        }
    });
    //--------------------------------------------------------------------------------------------------------------------------------------------------------------

    // Delete asset type

    $('#getAssetType').on('click', '#btnDelete', function () {
        Swal.fire({
            title: 'Are you sure want to delete?',
            // text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#1ee0ac',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes',
            cancelButtonText: 'No',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                var id = $(this).data("id")
                var assettype = {
                    Id: id
                };

                $('.loader').removeClass('d-none');

                $.ajax({
                    type: "POST",
                    url: "/Asset/DeletedAssetType",
                    data: assettype,
                    success: (result) => {
                        if (result == true) {
                            Swal.fire({
                                title: 'Deleted Successfully!',
                                text: "",
                                icon: 'success',
                                allowOutsideClick: false
                            }).then((result) => {
                                    window.location.href = "/Asset/Types";
                            });                          
                        }
                        else {
                            Swal.fire({
                                title: 'Something error',
                                text: "",
                                icon: 'error',
                                allowOutsideClick: false
                            }).then((result) => {
                                window.location.href = "/Asset/Types";
                            });                           
                        }
                        $('.loader').addClass('d-none');
                    },
                    error: (result) => {
                        $('.loader').addClass('d-none');
                    }

                });
            }
        });

    });
    //-----------------------------------------------------------------------------------------------------------------------------------------------------------

    // Update asset type

    $('#getAssetType').on('click', '.btnUpdate', function () {

        $("#Update_Popup").modal('show');
        var typeName = $(this).data("categoryname");
        var isActive = $(this).data("isactive");
        $("#TypeNames").text(typeName);

        isActive == 'True' ? $('.chkIsActiveModule').prop('checked', true) : $('.chkIsActiveModule').prop('checked', false);

        $("#assettypeAction").val(isActive);
        var id = $(this).data("id");
        $('#Update_Popup').on('click', '#btnIsActive', function () {
            var assettypeAction = $('.chkIsActiveModule').prop('checked');
            var assettype = {
                Id: id,
                IsActive: assettypeAction
            };

            $('.loader').removeClass('d-none');

            $.ajax({
                type: "POST",
                url: "/Asset/UpdateAssetType",
                data: assettype,
                success: (Result) => {
                    $('.loader').addClass('d-none');
                    $("#Update_Popup").css('display', 'none !important');
                    if (Result > 0) {
                        Swal.fire({
                            title: 'Updated Successfully',
                            text: "",
                            icon: 'success',
                            allowOutsideClick: false
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = "/Asset/Types";
                            };
                        });                       
                    } else {
                        Swal.fire({
                            title: 'Something error',
                            text: "",
                            icon: 'error',
                            allowOutsideClick: false
                        }).then((result) => {                          
                                window.location.href = "/Asset/Types";
                        });                      
                    }

                },
                error: (Result) => {
                    $('.loader').addClass('d-none');
                }
            });
        });


    });
    //---------------------------------------------------------------------------------------------------------------------------------------------------------

    $("#btnCloseUpdate").click(function () {
        $("#Update_Popup").hide();
        window.location.href = "/Asset/Types";
    });


    $("#btnCancel").click(function () {
        $("#Update_Popup").hide();
        window.location.href = "/Asset/Types";
    });

    // Edit asset type

    $('#getAssetType').on('click', '.btnEdit', function () {

        $("#Asstetype_Popup").modal('show');
        var typeName = $(this).data("categoryname");
        var categoryId = $(this).data("categoryid");
        var isActive = $(this).data("isactive");
        $("#AssetCategoryCodes").val(categoryId);
        $("#AssetTypeName").val(typeName);
        var id = $(this).data("id");

        var CategoryName = $("#AssetCategoryCodes").val();
        var TypeName = $("#AssetTypeName").val();

        $('#Asstetype_Popup').on('click', '#btnAsstetype', function () {

            var isValid = true;
            var typename = $("#AssetTypeName").val();
            var category = {
                Id: id,
                CategoryId: CategoryName,
                TypeName: typename,
                IsActive: isActive
            };
            if (typename == "") {
                $("#errMsg-CategoryName").text("Type field is required");
                isValid = false;
            }

            $('.loader').removeClass('d-none');
            if (isValid) {
                $.ajax({
                    type: "POST",
                    url: "/Asset/UpadateAssetType",
                    data: category,
                    success: (Result) => {
                        $("#Asstetype_Popup").css('display', 'none !important');
                        if (Result > 0) {
                            Swal.fire({
                                title: 'Updated Successfully',
                                text: "",
                                icon: 'success',
                                allowOutsideClick: false
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location.href = "/Asset/Types";
                                };
                            });                           
                        }
                        else {
                            Swal.fire({
                                title: 'Something error',
                                text: "",
                                icon: 'error',
                                allowOutsideClick: false
                            }).then((result) => {
                                    window.location.href = "/Asset/Types";
                            });
                        }
                        $('.loader').addClass('d-none');
                    },
                    error: (Result) => {
                        $('.loader').addClass('d-none');
                    }
                });
            }
            else {
                $('.loader').addClass('d-none');
                return false;
            }

        });
    });
    $(document).ready(function () {
        $('#Update_Popup').modal({
            backdrop: 'static',
            keyboard: false
        })
        $('#Create_Popup').modal({
            backdrop: 'static',
            keyboard: false
        })
        $('#Asstetype_Popup').modal({
            backdrop: 'static',
            keyboard: false
        })
    });

</script>